<div  class="signup">
  <header class="formheader">
    <div class="nav fixed">
      <nav class="top-bar" data-topbar role="navigation">
        <ul class="title-area">
          <li><a class="logo" href="/">SmartContent</a></li>
          <li class="toggle-topbar menu-icon">
            <a href="#"><span>Menu</span></a>
          </li>
        </ul>
        <section class="top-bar-section">
          <!-- Right Nav Section -->
          <ul class="right">
            <% if(Robin.chinaInstance) { %>
              <li><a href="<%= Robin.us_host %>"><img src="<%= AppAssets.path('us-flag-icon.png') %>" title="<%= polyglot.t('landing_page.english_locale') %>" height="13" /></a></li>
            <% } else { %>
              <li><a href="<%= Robin.cn_host %>"><img src="<%= AppAssets.path('china-flag-icon.png') %>" title="<%= polyglot.t('landing_page.chinese_locale') %>" height="13" /></a></li>
            <% } %>

            <% if(Robin.chinaLocale) { %>
              <li><a href="?locale=en">EN</a></li>
            <% } else { %>
              <li><a href="?locale=zh">ZH</a></li>
            <% } %>

            <!-- <li><a href="/home"><%= polyglot.t('header.advertisers') %></a></li> -->
            <li><a href="/kols/new"><%=polyglot.t('header.sign_up')%></a></li>
          </ul>
        </section>
      </nav>
    </div>
    <div class="row">
      <div class="large-12 columns">
        <h2 class="signup-tag"></h2>
      </div>
    </div>
  </header>

  <div class="form-step">
  </div>

  <footer>
    <div class="row">
      <div class="small-12 medium-3 columns ft-logo right">
        <img src="<%= AppAssets.path('ROBIN8-logo.png') %>" />
      </div>
      <div class="small-12 medium-9 columns left">
        <%= polyglot.t('footer.right_reserved') %> <br class="show-for-medium-only"> <a href="about.html" class="ft-link privacy"><%= polyglot.t('footer.about') %></a> <a href="/team" class="ft-link privacy"><%= polyglot.t('footer.team') %></a> <a href="/contact" class="ft-link privacy"><%= polyglot.t('footer.contact') %></a> <a href="/terms" class="ft-link privacy"><%= polyglot.t('footer.privacy_and_terms') %></a>
      </div>
    </div>
  </footer>
</div>
