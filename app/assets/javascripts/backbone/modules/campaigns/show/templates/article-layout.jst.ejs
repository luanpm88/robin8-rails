<div class="modal-dialog modal-lg">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title"><%= title %></h4>
        </div>
        <div class="modal-body">
            <!-- Nav tabs -->
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#content" aria-controls="content" role="tab" data-toggle="tab" data-action="accepted">Content</a></li>
                <li role="presentation"><a href="#comments" aria-controls="comments" role="tab" data-toggle="tab" data-action="declined">Comments</a></li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="content">
                    <textarea class="wysihtml5 article-content"><%= item.text %></textarea>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary" id="article-save">Save changes</button>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="comments">
                    <div class="row">Documents</div>
                    <div class="row">Comments</div>
                    <div class="row comments-list">
                        <% if (item.article_comments) { %>
                            <div class="row">No comments yet</div>
                        <% } else { %>
                            <% _.each(item.article_comments, function(c) { %>
                                <div class="row">
                                    <p><%= formatDate(c.created_at) %></p>
                                    <p><%= c.sender %></p>
                                    <p><%= c.text %></p>
                                </div>
                            <% }); %>
                        <% } %>
                    </div>
                    <div class="row">
                        <div class="col-md-9">
                            <form class="form-horizontal">
                                <div class="form-group">
                                    <input type="text" id="comment" value="" class="form-control" placeholder="Type your comment" />
                                </div>
                            </form>
                        </div>
                        <div class="col-md-3">
                            <div class="pull-right">
                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary" id="comment-save">Save</button>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
