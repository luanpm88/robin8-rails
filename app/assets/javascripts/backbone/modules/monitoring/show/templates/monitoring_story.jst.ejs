<div class="media">
  <a class="media-left" href="<%= story.link%>" target="blank">
    <img class="image" src="<%= story.image%>" onerror="this.src='<%= AppAssets.path('news.png') %>';" width='64px' height='64px' class='js-story-img'>
  </a>
  <div class="media-body">
    <h4 class="media-heading js-open-story"><%= story.blog_name %><span class="timeago"><%= story.timeago %></span></h4>
    <p class="js-open-story"><%= story.title %></p>
    <span class="pull-left label label-default likes">
      <a href="#"><i class="fa fa-thumbs-up"></i> <%= story.likes %></a>
    </span>
    <span class="pull-right label">
      <a href="<%= story.link%>" target="blank" class="read-more label label-default btn btn-xs btn-info"><i class="fa fa-sign-out"></i> Read more</a>
      <a class="read-more share label label-default btn btn-xs btn-info"><i class="fa fa-share-alt"></i></a>
    </span>
  </div>
</div>
