<% if (items.length == 0) { %>
  <div class="row text-center"><%= polyglot.t("smart_release.targets_step.media_tab.table.empty") %></div>
<% } else { %>
  <div class="row">
    <table class="table table-striped" id="kols-lists">
      <thead><tr>
        <th><%= polyglot.t("smart_release.targets_step.media_tab.table.name") %></th>
	    <th><%= polyglot.t("smart_release.targets_step.media_tab.table.contacts") %></th>
	    <th><%= polyglot.t("smart_release.targets_step.media_tab.table.actions") %></th>
      </tr></thead>
      <tbody>
        <% _.each(items, function(c) { %>
          <tr data-id="<%= c.id %>">
            <td><%= c.name %></td>
            <td><%= c.kols_count %></td>
            <td><a class="btn btn-danger btn-xs left-btn" href="#" id="delete_contacts" data-list-id="<%= c.id %>"><i class="fa fa-close"></i> <%= polyglot.t("smart_campaign.targets_step.delete_contacts_from_campaign") %></a><a class="btn btn-danger btn-xs" href="#" id="delete_list" data-list-id="<%= c.id %>"><i class="fa fa-close"></i> <%= polyglot.t("smart_campaign.targets_step.delete_contacts_list") %></a></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } %>
