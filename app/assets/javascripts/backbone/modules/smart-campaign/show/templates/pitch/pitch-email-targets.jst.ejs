<div class="well">
  <span class="badge badge-success"><%= items.length%></span> <%= polyglot.t("smart_campaign.pitch_step.emailTargets") %> <i class="fa fa-envelope"></i>
  <a href="#email-targets-list" data-toggle="collapse">
    <small><%= polyglot.t("smart_campaign.pitch_step.see") %> <i class="fa fa-chevron-down"></i></small>
  </a>

  <div id="email-targets-list" class="collapse">
    <br/>
    <table class="table table-condensed">
      <thead>
      <tr>
        <th><%= polyglot.t("smart_campaign.pitch_step.targets_table.name") %></th>
        <th><%= polyglot.t("smart_campaign.pitch_step.targets_table.email") %></th>
        <th><%= polyglot.t("smart_campaign.pitch_step.targets_table.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% _.each(items, function(c) { %>
      <tr data-id="<%= c.id %>">
        <td  class="middle"><%= c.name %></td>
        <td class="middle"><%= c.email %></td>
        <td><a class="btn btn-danger btn-xs" href="#"><i class="fa fa-close"></i> <%= polyglot.t("smart_campaign.pitch_step.delete_button") %></a></td>
      </tr>
      <% }); %>
      </tbody>
    </table>
  </div>
  </div>
