<span class="kol-errors"><%=polyglot.t('smart_campaign.targets_step.need_invite')%></span>
<% if (!search) { %>
  <i class="fa fa-filter"></i>
  <a href="#email-targets-list" data-toggle="collapse">
    <small>Filter <i class="fa fa-chevron-down"></i></small>
  </a>
<% } %>
  <div id="email-targets-list" class="collapse">
    <br/>
    <form role="form" class="form" id="filter-authors">

      <div class="form-group">
        <label class="filter-label"><%=polyglot.t('smart_campaign.targets_step.available_channels')%></label>
        <span><input type="checkbox" class='private-checkbox' id="icheckbox_flat" name="is_weibo" ></span>
        <label for="is_weibo" class="control-label channels-label" style="margin-right: 5px;" ><%= polyglot.t("smart_campaign.targets_step.weibo_channel") %> </label>
        <span><input type="checkbox" class='private-checkbox' id="icheckbox_flat" name="is_wechat_personal" ></span>
        <label for="is_wechat_personal" class="control-label channels-label" style="margin-right: 5px;" ><%= polyglot.t("smart_campaign.targets_step.wechat_personal") %> </label>
        <span><input type="checkbox" class='private-checkbox' id="icheckbox_flat" name="is_wechat_public" ></span>
        <label for="is_wechat_public" class="control-label channels-label" style="margin-right: 5px;" ><%= polyglot.t("smart_campaign.targets_step.wechat_public") %> </label>
        <span><input type="checkbox" class='private-checkbox' id="icheckbox_flat" name="is_linkedin" ></span>
        <label for="is_linkedin" class="control-label channels-label" style="margin-right: 5px;" ><%= polyglot.t("smart_campaign.targets_step.linkedin") %> </label>
      </div>

      <div class="filter-group">
        <label class="filter-label"><%=polyglot.t('smart_campaign.targets_step.age_group')%></label>
        <div class="btn-group" data-toggle="buttons">
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="ageGroup" id="ageGroup"> < 12
          </label>
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="ageGroup" id="ageGroup"> 12-18
          </label>
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="ageGroup" id="ageGroup"> 18-25
          </label>
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="ageGroup" id="ageGroup"> 25-35
          </label>
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="ageGroup" id="ageGroup"> 35-45
          </label>
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="ageGroup" id="ageGroup"> 45-55
          </label>
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="ageGroup" id="ageGroup"> > 55
          </label>
        </div>
      </div>
      <div class="filter-group">
        <label class="filter-label"><%=polyglot.t('smart_campaign.targets_step.male')%>:<%=polyglot.t('smart_campaign.targets_step.female')%></label>
        <div class="age-group">
          <input type="radio" name="male" value="80male" id="80male">
          <label class="radio-inline radio-btns" for="80male">80:20</label>
          <input type="radio" name="male" value="60male" id="60male">
          <label class="radio-inline radio-btns" for="60male">60:40</label>
          <input type="radio" name="male" value="50male" id="50male">
          <label class="radio-inline radio-btns" for="50male">50:50</label>
          <input type="radio" name="male" value="40male" id="40male">
          <label class="radio-inline radio-btns" for="40male">40:60</label>
          <input type="radio" name="male" value="20male" id="20male">
          <label class="radio-inline radio-btns" for="20male">20:80</label>
        </div>
      </div>
      <% if (locale == 'zh') { %>
        <div class="filter-group">
          <label class="filter-label"><%=polyglot.t('smart_campaign.targets_step.regions')%></label>
          <div class="btn-group" data-toggle="buttons">
            <label class="btn btn-primary filter-btn">
              <input type="radio" name="regions" id="option1"> <%=polyglot.t('smart_campaign.targets_step.east')%>
            </label>
            <label class="btn btn-primary filter-btn">
              <input type="radio" name="regions" id="option2"> <%=polyglot.t('smart_campaign.targets_step.north')%>
            </label>
            <label class="btn btn-primary filter-btn">
              <input type="radio" name="regions" id="option3"> <%=polyglot.t('smart_campaign.targets_step.northeast')%>
            </label>
            <label class="btn btn-primary filter-btn">
              <input type="radio" name="regions" id="option3"> <%=polyglot.t('smart_campaign.targets_step.south')%>
            </label>
            <label class="btn btn-primary filter-btn">
              <input type="radio" name="regions" id="option3"> <%=polyglot.t('smart_campaign.targets_step.west')%>
            </label>
            <label class="btn btn-primary filter-btn">
              <input type="radio" name="regions" id="option3"> <%=polyglot.t('smart_campaign.targets_step.central')%>
            </label>
          </div>
        </div>
      <% } else {%>
        <div class="form-group">
          <label class="filter-label"><%=polyglot.t('smart_campaign.targets_step.location')%></label>
          <input type="text" name="locations" id="locations" value="" autocomplete="off" placeholder="<%=polyglot.t('smart_campaign.targets_step.city_state')%>" class="typeahead form-control location-input">
        </div>
      <% } %>

      <div class="filter-group">
        <label class="filter-label"><%=polyglot.t('smart_campaign.targets_step.content')%></label>
        <div class="btn-group" data-toggle="buttons">
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="content" id="option1"> <%=polyglot.t('smart_campaign.targets_step.online')%>
          </label>
          <label class="btn btn-primary filter-btn">
            <input type="radio" name="content" id="option2"> <%=polyglot.t('smart_campaign.targets_step.offline')%>
          </label>
        </div>
      </div>
    </form>
  </div>

<% if (kols.length == 0) { %>
<div>
  <i><%=polyglot.t('smart_campaign.targets_step.couldnt_match_influencers')%></i>
</div>
<% } else { %>
  <table class="table table-hover targets dataTable no-footer" id="kols-table">
    <thead style="cursor:pointer;"><tr>
      <th><%=polyglot.t('smart_campaign.targets_step.name')%></th>
      <th><%=polyglot.t('smart_campaign.targets_step.email')%></th>
      <th><%=polyglot.t('smart_campaign.targets_step.location')%></th>
      <th><%=polyglot.t('smart_campaign.targets_step.private')%></th>
      <th><%=polyglot.t('smart_campaign.targets_step.invite')%></th>
    </tr></thead>
    <tbody>
      <%
        var invited_kols = kols_id();
        var id = campaign_id();
        _.each(kols, function(k) {
          if (isPresent(k,id,invited_kols)) {
       %>
        <tr data-id="<%= k.id %>">
          <td>
              <div class="media targets-author">
                <img width="68px" src="<%= AppAssets.images['user_avatar.png'] %>"></img>
                <div class="campaign_author">
                  <h4 class="media-heading">
                    <%= k.first_name %>
                  </h4>
                    <% if (k.categories) { %>
                      <% _.each(_.range(3), function(index){ %>
                        <% if (k.categories[index]) { %>
                          <span class="badge badge-default">
                            <i class="fa fa-tag"></i> <%= k.categories[index].label %>
                          </span>
                        <% } %>
                      <% }); %>
                    <% } %>
                    <br>
                    <a class="btn btn-xs btn-primary inspect" href="#"><i class="fa fa-search"></i><%=polyglot.t('smart_campaign.targets_step.weibo_tab.inspect')%></a>
                </div>
              </div>
          </td>
          <td><%= k.email %></td>
          <td><%= k.location %></td>
          <td><%= public(k) %></td>
          <td>
            <% var is_checked = "";
            var checked = "NO";
            if ((k.invited != null && k.invited == true) || (isChecked(k, invited_kols)))
              { is_checked = "checked"; checked = "YES";} %>
            <input id="invite_<%= k.id %>" class="css-checkbox" type="checkbox" name="invite_<%= k.id %>" data-kol-id="<%= k.id %>" value=<%= checked %> <%= is_checked %>>
            <label class="css-label" for="invite_<%= k.id %>"></label>
          </td>
        </tr>
      <% } %>
      <% }); %>
    </tbody>
  </table>
<% } %>
