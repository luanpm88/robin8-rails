<div class="clearfix"></div>
<div class="row">
  <div class="col-md-12" id="campaign-nav">
  </div>
</div>
<div class="clearfix"></div>
<div class="col-sm-12 smart-campaign" id="campaign-content" style="width: 99%">
  <div class="row">
    <div class="col-md-6">
      <h5><i class="fa fa-home glyphicon glyphicon-bullhorn"></i> New Campaign</h5>
    </div>
    <div class="pull-right">
      <button class="btn btn-success save-campaign" type="btn" id="save-btn">Save</button>
    </div>
  </div>
  <div class="row">
    <form class="form-horizontal" role="form" autocomplete="off" id="campaign-form" onsubmit="return false;">
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <label for="name" class="control-label">Name:</label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <input id="name" required class="form-control" placeholder="My new campaign" name="name" type="text" value="">
            </div>
          </div>
          <div class="form-group">
            <label class="control-label">Budget:</label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <input class="form-control" placeholder="$1000" name="budget" type="number" value="" required>
            </div>
          </div>
          <div class="form-group">
            <label for="release">Release:</label>
            <div class="help-block with-errors campaign-errors"></div>
            <div class="ui-select">
              <select id="release" class="releases form-control" name="release" required>
                <option value="">Select...</option>
                <% _.each(releases, function(item){ %>
                  <option value="<%= item.id %>"><%= item.title %></option>
                <% }); %>
              </select>
            </div>
          </div>
          <label class="control-label">Categories:</label>
          <div>
            <input class="form-control" id="categories" name="categories" type="hidden">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <label class="control-label">Deadline:</label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <input class="form-control" placeholder="Pick a deadline!" id="deadline" name="deadline" type="text" value="" required>
            </div>
          </div>
          <div class="form-group">
            <label class="control-label">Description:</label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <textarea required class="form-control" rows="7" placeholder="Give influencers more details about your campaign here..." name="description" value=""></textarea>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
  <hr/>
  <div class="row" id="target-kols">
  </div>
  <hr/>
</div>

