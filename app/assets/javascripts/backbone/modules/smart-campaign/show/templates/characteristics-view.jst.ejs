<div class="row">
  <div class="col-md-12" align="center">
    <span class="badge badge-default"><span class="badge" id="charactersCount"><%= numberOfCharacters %></span> <%= polyglot.t('smart_campaign.editor.characters') %></span>
    <span class="badge badge-default"><span class="badge" id="wordsCount"><%= numberOfWords %></span> <%= polyglot.t('smart_campaign.editor.words') %></span>
    <span class="badge badge-default"><span class="badge" id="sentencesCount"><%= numberOfSentences %></span> <%= polyglot.t('smart_campaign.editor.sentences') %> </span>
    <span class="badge badge-default"><span class="badge" id="paragraphsCount"><%= numberOfParagraphs %></span> <%= polyglot.t('smart_campaign.editor.paragraphs') %></span>
    |
    <span class="badge badge-default"><span class="badge" id="nounsCount"><%= numberOfNouns %></span> <%= polyglot.t('smart_campaign.editor.nouns') %></span>
    <span class="badge badge-default"><span class="badge" id="adjectivesCount"><%= numberOfAdjectives %></span> <%= polyglot.t('smart_campaign.editor.adjectives') %></span>
    <span class="badge badge-default"><span class="badge" id="adverbsCount"><%= numberOfAdverbs %></span> <%= polyglot.t('smart_campaign.editor.adverbs') %></span>
  </div>
</div>
<div class="row" style="margin-top: 12px;">
  <div class="col-md-4" align="center">
    <strong data-toggle="tooltip" data-placement="top" title="Automated Readability Index"><%= polyglot.t('smart_campaign.editor.readability_score') %></strong>:&nbsp;<span id="ari"><%= readabilityScore %></span> <span class="label label-default" id="ari-badge"><%= readabilityScoreTitle %></span>
    <div class="progress progress-striped active" style="height: 10px; margin-top: 6px;">
      <div class="progress-bar progress-bar-success" role="progressbar" style="width: <%= readabilityScore*5 %>%;" id="ari-progress"></div>
    </div>
  </div>
  <div class="col-md-8" align="right">
    <a href="#" id="highlight_textarea" class="btn btn-default btn-sm" role="button" style="margin-right: 4px; display: none;"><i class="fa fa-eraser"></i> Highlight</a>
  </div>
</div>
