<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title text-center" id="myModalLabel">Send a Test</h4>
    </div>
    <div class="modal-body">
      <form role="form" id="send-test-email" method="post" action="/campaign/test_email/">
        <div class="form-group">
          <label for="emails" class="col-sm-3 control-label">Send a test to</label>
          <br />
          <div class="col-sm-10">
            <input class="form-control" id="email-address-input" type="hidden" name="email_address" value="">
            <input class="form-control" id="email-subject-input" type="hidden" name="email_subject" value="">
            <input class="form-control" id="email-pitch-input" type="hidden" name="email_pitch" value="">
            <input type="email" class="form-control" id="test-pitch-emails-input"
                   placeholder="Ex: freddie@mailchimp.com, mannie@mandrill.com..." name="emails">
            <span id="helpBlock" class="help-block">Comma separate emails to send to multiple accounts</span>
          </div>
        </div>
      </form>
    </div>
    <div class="modal-footer">
      <div>
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-primary" id="send-test-btn">Send Test</button>
      </div>
    </div>
  </div>
</div>
