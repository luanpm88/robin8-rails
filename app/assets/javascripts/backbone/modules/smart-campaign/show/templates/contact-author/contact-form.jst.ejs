<div class="modal-content">
  <div class="modal-header">
    <button class="close" data-dismiss="modal" type="button">Ã—</button>

    <h4 class="modal-title"><i class="fa fa-envelope"></i> <%= polyglot.t('smart_campaign.contact_form.title') %></h4>
  </div>
  <div class="modal-body">
    <p><%= polyglot.t('smart_campaign.contact_form.send_to') %> <strong class="author-name"><%= author.full_name %></strong>.</p>

    <div class="row">
      <div class="col-xs-6">
        <label><%= polyglot.t('smart_campaign.contact_form.subject') %></label> <input name="subject" class="form-control" placeholder="Enter a catchy subject line..." type="text">
      </div>

      <div class="col-xs-6">
        <label><%= polyglot.t('smart_campaign.contact_form.your_email') %></label> <input class="form-control" name="email" placeholder="<%= polyglot.t('smart_campaign.contact_form.email') %>" type="text" value="<%= currentUser.get('email') %>">
      </div>
    </div>
    <hr>

    <div class="row">
      <div class="col-xs-12">
        <label for="numberOfSentences" id="number-of-sentences">Number of summary sentences: <span>5</span></label>

        <div id="slider"></div><label><%= polyglot.t('smart_campaign.contact_form.message') %></label>
        <div id="form-message">
        </div>
      </div>
    </div>
  </div>
  
  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" type="button"><%= polyglot.t('smart_campaign.contact_form.close') %></button> 
    <button id="send-btn" class="btn btn-success" type="button"><%= polyglot.t('smart_campaign.contact_form.send') %></button>
  </div>
</div>
