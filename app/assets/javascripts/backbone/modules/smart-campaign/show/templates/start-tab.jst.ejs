<script id="wyihtml5-extract-button" type="text/template">
  <li><a class="btn btn-default btn-sm" id="extract_url" title='Grab release from URL'><i class="fa fa-cloud-download font-12"></i></a></li>
</script>
<script id="wyihtml5-insert-link" type="text/template">
  <li><a class="btn btn-default btn-sm" id="insert_link" title="Insert link"><i class="fa fa-external-link font-12"></i></a></li>
</script>
<script id="wyihtml5-unlink" type="text/template">
  <li><a class="btn btn-default btn-sm" id="unlink" title="Delete link"><i class="fa fa-unlink font-12"></i></a></li>
</script>
<script id="wyihtml5-word-button" type="text/template">
  <li><a class="btn btn-default btn-sm" title="Grab release from DOCX document " onclick="document.getElementById('upload').click(); return false" id="extract_word"><i class="fa fa-file-word-o font-12"></i></a></li>
</script>
<script id="wyihtml5-direct-image-button" type="text/template">
  <div class="btn-group">
    <a class="btn btn-default btn-sm" id="direct-image-upload" title="Insert image by uploading"><i class="fa fa-file-image-o font-12"></i></a>
    <a class="btn btn-default btn-sm" id="url-image-upload" title="Insert image by url"><i class="fa fa-upload font-12"></i></a>
  </div>
</script>
<script id="wyihtml5-direct-video-button" type="text/template">
  <div class="btn-group">
    <a class="btn btn-default btn-sm" id="direct-video-upload" title="Insert video by uploading"><i class="fa fa-file-video-o font-12"></i></a>
    <a class="btn btn-default btn-sm" id="url-video-upload" title="Insert video by url"><i class="fa fa-upload font-12"></i></a>
  </div>
</script>

<input type="file" id="upload" name="upload" accept=".docx" style="visibility: hidden; width: 1px; height: 1px" />
<div class="col-sm-12 smart-campaign" id="campaign-content" style="width: 99%">
  <div class="row">
    <form accept-charset="UTF-8" class="form-horizontal" role="form" autocomplete="off" id="campaign-form" onsubmit="return false;">
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <label for="name" class="control-label start-form"><%=polyglot.t('smart_campaign.start_step.campaign_title')%></label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <input id="name" required class="form-control" placeholder="<%=polyglot.t('smart_campaign.start_step.enter_title')%>" name="name" type="text" value="">
            </div>
          </div>
        </div>

        <div class="col-md-12">
          <div class="form-group">
            <label for="name" class="control-label start-form"><%=polyglot.t('smart_campaign.start_step.campaign_description')%></label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <textarea id="name" required class="form-control" placeholder="<%=polyglot.t('smart_campaign.start_step.enter_description')%>" name="description" type="text" value="" rows="10" data-widearea="enable" data-widearea-id="1"/>
            </div>
          </div>
        </div>

        <div class="col-md-12">
          <div class="form-group">
            <label for="name" class="control-label start-form"><%=polyglot.t('smart_campaign.start_step.campaign_url')%></label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <input id="name" required class="form-control" placeholder="<%=polyglot.t('smart_campaign.start_step.enter_url')%>" name="url" type="text" value="">
            </div>
          </div>
        </div>

        <div class='col-md-6'>

          <div class="form-group">
            <label for="name" class="control-label start-form"><%=polyglot.t('smart_campaign.start_step.campaign_budget')%></label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <i class="glyphicon glyphicon-minus operate-money-icon"></i>
              <div class="input-group money-input-group">
                <input id="name" required class="form-control" placeholder="<%=polyglot.t('smart_campaign.start_step.enter_budget')%>" name="budget" type="text" value="" style="width: 120px;display: inline">
                <span class="input-group-addon input-money-icon " id="basic-addon2">RMB</span>
              </div>
              <i class="glyphicon glyphicon-plus operate-money-icon"></i>

              <i class="glyphicon glyphicon-minus operate-money-icon per-budget-operate-icon"></i>
              <div class="input-group money-input-group">
                <input id="name" required class="form-control" placeholder="<%=polyglot.t('smart_campaign.start_step.enter_per_click_budget')%>" name="per_click_budget" type="text" value="" style="width: 120px;display: inline">
                <span class="input-group-addon input-money-icon " id="basic-addon2">RMB</span>
              </div>
              <i class="glyphicon glyphicon-plus operate-money-icon"></i>
            </div>
          </div>
          <label for="name" class="control-label start-form campain_time"><%=polyglot.t('smart_campaign.start_step.campaign_time')%></label>
          <div class="form-group">
            <div class="help-block with-errors campaign-errors"></div>
            <div class="campaign_execute_times">
              <label for="name" class="control-label start-form  campaign_start_time"><%=polyglot.t('smart_campaign.start_step.campaign_start_time')%></label>
              <div class='input-group date' id='datetimepicker6'>
                 <input type='text' class="form-control campaign_start_time_input" name="start_time"  readonly="readonly" autocomplete="off"/>
                 <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                 </span>
              </div>

              <label for="name" class="control-label start-form campaign_end_time"><%=polyglot.t('smart_campaign.start_step.campaign_end_time')%></label>
              <div class='input-group date' id='datetimepicker7'>
                <input type='text' class="form-control campaign_deadline_input" name="deadline" readonly="readonly"  autocomplete="off" />
                <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
                </span>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group messeage_to_kol">
            <label for="name" class="control-label start-form"><%=polyglot.t('smart_campaign.start_step.campaign_description')%></label>
            <div class="help-block with-errors campaign-errors"></div>
            <div>
              <textarea id="name" class="form-control" placeholder="<%=polyglot.t('smart_campaign.start_step.enter_description')%>" name="description" type="text" value="" rows="10" data-widearea="enable" data-widearea-id="1" name="message"/>
            </div>
          </div>
       </div>

        <button id="create-campagin" class="btn btn-primary pull-left" type="submit"><i class="fa fa-cogs"></i> <%=polyglot.t('smart_campaign.start_step.save')%> </button>
      </div>
    </form>
  </div>
</div>

