<% if (declined.length !=0 ) { %>
  <div class="row">
    <table class="table table-striped detailed-table" id="accepted-kols">
      <thead style="cursor:pointer;"><tr>
        <th class='campaign-details-column col-md-4' data-sort="string"><%=polyglot.t('smart_campaign.name')%></th>
        <th class='campaign-details-column'><%=polyglot.t('smart_campaign.deadline')%></th>
        <th class='campaign-details-column' data-sort="string"><%=polyglot.t('smart_campaign.status')%></th>
        <th class='campaign-details-column'><%=polyglot.t('smart_campaign.decline_date')%></th>
      </tr></thead>
      <tbody>
        <% _.each(declined, function(k) { %>
          <tr data-id="<%= k.id %>">
            <td><%= k.first_name %></td>
            <td><%= formatDate(campaign.deadline) %></td>
            <td><%= status(k) %></td>
            <td><%= formatDate(k.decline_date) %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
<% } else { %>
  <i><%=polyglot.t('smart_campaign.no_one_declined')%></i>
<% } %>
