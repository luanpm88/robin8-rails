<div class="row campaigns-list-table">
  <table class="table table-striped table-bordered dataTable" cellspacing="0" width="100%" id="campaigns-table22">
      <thead style="cursor:pointer;">
      <tr>
        <th><%= polyglot.t("smart_campaign.stats.kol_name") %></th>
        <% if (campaign["per_budget_type"] == "click" || campaign["per_budget_type"] == "cpa") {%>
          <th><%= polyglot.t("smart_campaign.stats.avail_click") %></th>
        <% } %>
        <th><%= polyglot.t("smart_campaign.stats.total_click") %></th>
        <th><%= polyglot.t("smart_campaign.stats.start_time") %></th>
        <th>审核状态</th>
      </tr>
      </thead>
    <tbody>
    <% _.each(items, function(c) { %>
    <tr data-id="<%= c.id %>">
      <td class="middle col-md-1">
        <% if(c.kol.first_name != null && c.kol.last_name != null){ %>
          <%= c.kol.first_name %> &nbsp; &nbsp; <%= c.kol.last_name %>
        <% } else if(c.kol.social_name != null) { %>
          <%= c.kol.social_name %>
        <% } else { %>
          该用户未设置昵称
        <% } %>
      </td>
      <% if (campaign["per_budget_type"] == "click" || campaign["per_budget_type"] == "cpa") {%>
        <td class="middle col-md-1"><%= c.get_avail_click %></td>
      <% } %>
      <td class="middle col-md-1"><%= c.get_total_click %></td>
      <td class="middle col-md-1"><%= formatDate(c.approved_at) %></td>
      <td class="middle col-md-1">
        <% if(c.img_status == 'pending'){ %>
          待上传截图
        <% }else if(c.img_status =='pending' && c.screenshot){ %>
          <div class="screenshot">
            <img src='<%= c.screenshot + "-200" %>' data-detail='<%= c.screenshot + "-600" %>' style="max-height: 100px"/>
          </div>
          待审核
        <% }else if(c.img_status =='passed' && c.screenshot){ %>
          <div class="screenshot">
            <img src='<%= c.screenshot + "-200" %>'  data-big='<%= c.screenshot + "-600" %>' style="max-height: 100px"/>
          </div>
          审核通过
        <% }else if(c.img_status =='rejected' && c.screenshot){ %>
          审核拒绝
        <% } %>
      </td>
    </tr>
    <% }); %>
    </tbody>
  </table>

  <div class="modal fade" id="screenshotModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document" style="margin-top:100px">
      <div class="modal-content" style="text-align: center;padding-bottom:10px">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Kol 发表截图</h4>
        </div>
        <div class="modal-body" style="height: 300px">
          <img src="" id="screenshot_detail" style="max-height: 300px"/>
        </div>
      </div>
    </div>
  </div>
</div>
