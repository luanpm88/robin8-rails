<% if (items.length == 0) { %>
  <div class="row"><%=polyglot.t('smart_campaign.no_campaigns')%></div>
<% } else { %>
  <div class="row campaigns-list-table">
    <table class="table table-striped table-bordered dataTable" cellspacing="0" width="100%" id="campaigns-table">
      <thead style="cursor:pointer;">
        <tr>
          <th width="100px"><%=polyglot.t('smart_campaign.name')%></th>
          <th width="100px"><%=polyglot.t('smart_campaign.status')%></th>
          <th width="100px"><%=polyglot.t('smart_campaign.share')%></th>
          <th width="70px">总访问</th>
          <th width="100px"><%=polyglot.t('smart_campaign.cost')%></th>
          <th width="100px"><%=polyglot.t('smart_campaign.created')%></th>
          <th width="100px"><%=polyglot.t('smart_campaign.deadline')%></th>
          <th width="100px">短链地址</th>
          <th width="100px">修改活动</th>
          <th class="no-sort" width="100px"></th>
        </tr>
      </thead>
      <tbody>
        <% _.each(items, function(c) { %>
          <tr data-id="<%= c.id %>">
            <td class="middle col-md-2 stats"><a href="/#smart_campaign/stats/<%= c.id %>"><%= c.name %></a></td>
            <% if (c.status == 'unexecute') { %>
              <td class="middle col-md-1"><%= polyglot.t('smart_campaign.unexecute') %></td>
            <% } else if (c.status == 'rejected') { %>
              <td class="middle col-md-1"><%= polyglot.t('smart_campaign.rejected') %></td>
            <% } else if (c.status == 'agreed') { %>
              <td class="middle col-md-1"><%= polyglot.t('smart_campaign.agreed') %></td>
            <% } else if (c.status == 'executing') { %>
              <td class="middle col-md-1"><%= polyglot.t('smart_campaign.executing') %></td>
            <% } else if (c.status == 'executed') { %>
              <td class="middle col-md-1"><%= polyglot.t('smart_campaign.executed') %></td>
            <% } else  { %>
              <td class="middle col-md-1"><%= polyglot.t('smart_campaign.settled') %></td>
            <% } %>
            <td class="middle col-md-1"><%= c.get_share_time %></td>
            <td class="middle col-md-1"><%= c.get_total_click %></td>
            <td class="middle"><%= c.get_fee_info %></td>
            <td class="middle" data-order="<%= timestamp(c.start_time) %>"><%= formatDate(c.start_time) %></td>
            <td class="middle" data-order="<%= timestamp(c.deadline) %>"><%= formatDate(c.deadline) %></td>
            <% if (c.per_budget_type == 'action') { %>
              <td class="middle" align="center">
                <a href="#" class="btn btn-success vcenter edit-btn" id="show_action_urls" campaign="<%= c.id %>">查看</a>
              </td>
            <% } else { %>
              <td class="middle"></td>
            <% } %>
            <td class="middle" align="center">
              <% if(c.status == 'unexecute'){ %>
                <a href='/#smart_campaign/edit/<%= c.id %>' class="btn btn-success vcenter edit-btn" campaign="<%= c.id %>"><%= polyglot.t("smart_campaign.edit") %></a>
              <% } else { %>
                <a class="btn btn-success vcenter edit-btn" id="contact" href="/contact?from=change" target="_blank">联系客服</a>
              <% } %>
            </td>
            <td class="middle" align="center">
              <a class="btn btn-success vcenter edit-btn" id="copy_campaign" campaign="<%= c.id %>"><%= polyglot.t("smart_campaign.replicate") %></a>
            </td>

          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>

  <div class="modal show-campaign-action-urls-modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close not_to_create_campaign" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title">行动链接列表</h4>
        </div>
        <div class="modal-body">

        </div>
        <br>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
<% } %>
