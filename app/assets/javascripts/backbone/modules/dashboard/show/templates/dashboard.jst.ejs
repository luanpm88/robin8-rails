<div class="col-sm-12" style="width: 99%">
	<div class="dashboard-btns">
		<div class="row">
			<h5><i class="fa fa-home"></i> <%= polyglot.t("dashboard.title") %></h5>
			<p>
				<%= polyglot.t("dashboard.description1") %>
			</p>
			<p>
				<%= polyglot.t("dashboard.description2") %>
			</p>
			<p>
				<%= polyglot.t("dashboard.description3") %>
			</p>
			<br />
			<div class="buttons-row">
				<div class='row'>
					<div class="col-sm-6 col-md-4 col-lg-3">
						<button class="btn btn-default btn-orange" id='stream'><i class="fa fa-building"></i> <%= polyglot.t("dashboard.new_monitoring_button") %></button>
					</div>
					<div class="col-sm-6 col-md-4 col-lg-3">
						<button class="btn btn-default btn-green" id='newsroom'><i class="glyphicon glyphicon-eye-open"></i> <%= polyglot.t("dashboard.new_newsroom_button") %></button>
					</div>
					<div class="col-sm-6 col-md-4 col-lg-3">
						<button class="btn btn-default btn-blue2" id='release'><i class=" glyphicon glyphicon-list-alt"></i> <%= polyglot.t("dashboard.new_release_button") %></button>
					</div>
					<div class="col-sm-6 col-md-4 col-lg-3">
						<button class="btn btn-default btn-blue" id='smart-release'><i class=" fa fa-rocket"></i> <%= polyglot.t("dashboard.new_smartrelease_button") %></button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
