<div id="blast-analysis" class="tab-pane active" role="tabpanel">
  <h5><i class="fa fa-bar-chart"></i> <%= polyglot.t("smart_release.analysis_step.title") %></h5>
  <p> <%= polyglot.t("smart_release.analysis_step.description1", {name: release.title, button: polyglot.t("smart_release.analysis_step.buttons.next") }) %></p>

  <p>
    <i style="color: #A0D468;" class="fa fa-check"></i> <%= polyglot.t("smart_release.analysis_step.is_about", {name: release.title }) %> <strong>
    "<a data-type="select2" data-value="<%= textapiResult['classify'] %>" data-title="Select a category" id="release-category" href="#" class="editable editable-click"><%= textapiResult['classify'] %></a>"</strong> <%= polyglot.t("smart_release.analysis_step.topics") %>: <strong><a data-type="select2" id="release-topics" data-title="Select topics" href="#" class="editable editable-click"><%= _.map(textapiResult["concepts"], function(item){ return item.topic }).join(", ") %></a></strong>.</p>

  <p><i style="color: #A0D468;" class="fa fa-check"></i> <%= polyglot.t("smart_release.analysis_step.summary", {name: release.title }) %> :</p>

  <ul style="margin-left: 38px; margin-bottom: 10px;">
    <% _.each(textapiResult["summarize"], function(item){ %>
      <li><%= item %></li>
    <% }); %>
  </ul>
  <br />
  <button disabled class="btn btn-primary pull-right" id="btn-next"><i class="fa fa-chevron-right"></i> <%= polyglot.t("smart_release.analysis_step.buttons.next") %></button>
</div>
