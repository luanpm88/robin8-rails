<td>
  <div class="media targets-author">
    <a href="#" class="media-left">
      <img alt="<%= author.full_name %>" 
        src="<%= author.avatar_url %>" />
    </a>
    <div class="media-body">
      <h4 class="media-heading">
        <%= author.full_name %>
      </h4>
      <a class="btn btn-xs btn-primary inspect" href="#">
        <i class="fa fa-search"></i> Inspect
      </a>
    </div>
  </div>
</td>
<td><%= author.blog_name %></td>

<% if(author.level_of_interest){ %>
<td>
  <div class="progress active">
    <div class="progress-bar" role="progressbar" 
      aria-valuenow="<%= author.level_of_interest %>" 
      aria-valuemin="0" aria-valuemax="100" 
      style="width: <%= author.level_of_interest %>%;">
        <%= author.level_of_interest %>%
    </div>
  </div>
</td>
<% } %>

<td>
  <% if (pitchContactsCollection.findWhere({author_id: author.id})) { %>
    <a href="#" class="btn btn-xs btn-success" disabled><i class="fa fa-check"></i> Yes</a> 
    <a href="#" class="btn btn-xs btn-danger"><i class="fa fa-close"></i> No</a>
  <% } else { %>
    <a href="#" class="btn btn-xs btn-success"><i class="fa fa-check"></i> Yes</a> 
    <a href="#" class="btn btn-xs btn-danger" disabled><i class="fa fa-close"></i> No</a>
  <% } %>
</td>
<td>
  <a href="#" class='contact-author'>
    <i class="fa fa-envelope"></i>
  </a>
</td>
