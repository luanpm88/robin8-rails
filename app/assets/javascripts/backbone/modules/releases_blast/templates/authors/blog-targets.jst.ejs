<div style="display:none;" id="refinement" class="panel panel-success">
  <div class="panel-heading">
    <h1 class="panel-title">
      <i class="fa fa-search"></i><strong> Advanced</strong>
    </h1>
  </div>
  <div class="panel-body">
    <form role="form" class="form" id="find-authors">
      <div class="form-group">
        <label>Location</label>
        <input type="text" name="location" autocomplete="off" 
          placeholder="City or State/Province or Country" class="typeahead form-control">
      </div>
      <div class="form-group">
        <label>Author Type</label>
        <input type="text" name="author_type" autocomplete="off" 
          placeholder="Author type" class="typeahead form-control">
      </div>
      <button class="btn btn-success pull-right btn-small" 
        type="submit">Search</button>
    </form>
  </div>
</div>

<table class="table table-hover targets">
  <thead>
    <tr>
      <th><%= polyglot.t("smart_release.targets_step.influencers_tab.author") %></th>
      <th><%= polyglot.t("smart_release.targets_step.influencers_tab.outlet") %></th>
      <th><%= polyglot.t("smart_release.targets_step.influencers_tab.relevance") %></th>
      <% if (Robin.currentUser.get('locale') == 'zh') { %>
        <th><%= polyglot.t("smart_release.targets_step.influencers_tab.followers_count") %></th>
      <% } %>
      <th><%= polyglot.t("smart_release.targets_step.influencers_tab.pitch") %></th>
      <th><%= polyglot.t("smart_release.targets_step.influencers_tab.contact") %></th>
    </tr>
  </thead>
  
  <tbody>
  </tbody>
</table>
