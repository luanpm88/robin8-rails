<form class="form" accept-charset="UTF-8" enctype="multipart/form-data" 
  method="post" action="/media_lists" data-remote="true">
  <div class="form-group">
    <label>Add a previously saved list</label>
    <div style="display: inline;" class="ui-select">
      <select class="form-control">
        <option value="-1">Select a Media List or upload a new one...</option>
        <% _(items).each(function(item){ %>
          <option value="<%= item.id %>"><%= item.name %></option>
        <% }); %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label>Upload a new list</label>
    <button class="btn btn-sm btn-primary"><i class="fa fa-upload"></i>  Upload</button>
    <br><small>Supported formats: CSV <i title="" data-html="true" data-placement="right" data-toggle="tooltip" class="fa fa-question-circle" data-original-title="Uploaded file must have exactly <strong>three</strong> columns, formatted as <strong>first name, last name, email address</strong>"></i></small>
    
    <input class="hide" type="file" name="media_list_file" accept="text/csv" />
  </div>
</form>
