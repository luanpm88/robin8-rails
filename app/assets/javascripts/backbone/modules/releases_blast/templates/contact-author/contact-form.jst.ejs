<div class="modal-content">
  <div class="modal-header">
    <button class="close" data-dismiss="modal" type="button">Ã—</button>

    <h4 class="modal-title"><i class="fa fa-envelope"></i> Contact</h4>
  </div>
  <div class="modal-body">
    <p>Send your content to <strong class="author-name"><%= author.full_name %></strong>.</p>

    <div class="row">
      <div class="col-xs-6">
        <label>Subject</label> <input name="subject" class="form-control" placeholder="Enter a catchy subject line..." type="text">
      </div>

      <div class="col-xs-6">
        <label>Your Email</label> <input class="form-control" name="email" placeholder="Email" type="text" value="<%= currentUser.get('email') %>">
      </div>
    </div>
    <hr>

    <div class="row">
      <div class="col-xs-12">
        <label for="numberOfSentences" id="number-of-sentences">Number of summary sentences: <span>5</span></label>

        <div id="slider"></div><label>Message</label>
        <div id="form-message">
        </div>
      </div>
    </div>
  </div>

  <div class="modal-footer">
    <button class="btn btn-default" data-dismiss="modal" type="button">Close</button>
    <button id="send-btn" class="btn btn-success" type="button">Send</button>
  </div>
</div>
