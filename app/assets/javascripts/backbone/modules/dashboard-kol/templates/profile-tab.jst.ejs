<div class="profile-content">

  <form role="form" action="javascript:void(0);" id="profile-form">
    <div class="general">
      <div id="test"></div>
      <div id="test-modal"></div>
      <div class="campaigns-tables-title">
        <span><%= polyglot.t('dashboard_kol.profile_tab.general_title') %></span>
      </div>
      <div class="score-tables profile_info">
        <div class="row subtitle">
          <%= polyglot.t('dashboard_kol.profile_tab.general_subtitle') %>
        </div>
        <div class="row">
          <div class="col-md-2 cell profile-labels kol-profile">
            <%= polyglot.t('dashboard_kol.profile_tab.first_name') %>
            <sup>*</sup>
          </div>
          <div class="col-md-6 cell"><input class="form-control required" type="text" id="name" name="first_name"/></div>
        </div>
        <div class="row">
          <div class="col-md-2 cell profile-labels kol-profile"><%= polyglot.t('dashboard_kol.profile_tab.last_name') %>
            <sup>*</sup></div>
          <div class="col-md-6 cell">
            <input required class="form-control required" type="text" id="name" name="last_name"/>
          </div>
        </div>

        <div class="row">
          <div class="col-md-2 cell profile-labels kol-profile"><%= polyglot.t('dashboard_kol.profile_tab.location') %>
            <sup>*</sup></div>
          <div class="col-md-2 cell select_wrapper">
            <select required class="full-width crs-country form-control required" data-region-id="province" id="country"
                    name="country"
                    placeholder="<%= polyglot.t('dashboard_kol.profile_tab.country') %>"
                    data-default-value="<%= k.country %>"></select>
          </div>
          <div class="col-md-2 cell select_wrapper">
            <select required class="full-width form-control required" id="province" name="province"
                    data-blank-option="<%= polyglot.t('dashboard_kol.profile_tab.select_region') %>"
                    placeholder="<%= polyglot.t('dashboard_kol.profile_tab.province') %>"
                    data-default-value="<%= k.province %>"></select>
          </div>
          <div class="col-md-2 cell">
            <input class="form-control required" type="text" id="city" name="city"
                   placeholder="<%= polyglot.t('dashboard_kol.profile_tab.city') %>"/>
          </div>
        </div>

        <div class="row form-group birdate-row" style="margin-bottom: 10px;">
          <div class="col-md-2 cell profile-labels kol-profile"><%= polyglot.t('dashboard_kol.profile_tab.birthdate') %>
          </div>

          <div class="col-md-4 cell date input-group" id="datetimepicker">
            <input type="text" class="form-control required" name="date_of_birthday" id="birthdate" autocomplete="off"
                   readonly="readonly"/>
            <span class="input-group-addon calendar_button">
               <span class="glyphicon glyphicon-calendar"></span>
            </span>
          </div>
        </div>

        <div class="row">
          <div class="col-md-2 cell profile-labels"><%= polyglot.t('dashboard_kol.profile_tab.gender') %>
          </div>
          <div class="age-group">
            <div class="col-md-2 cell">
              <input class="" type="radio" name="gender" value="1" id="gender_1" <%= checked('genders', 1, k) %> />
              <label class="radio-inline radio-btns label-profile"
                     for="gender_1"><%= polyglot.t('dashboard_kol.profile_tab.male') %></label>
            </div>
            <div class="col-md-2 cell">
              <input class="" type="radio" name="gender" value="2" id="gender_2" <%= checked('genders', 2, k) %> />
              <label class="radio-inline radio-btns label-profile"
                     for="gender_2"><%= polyglot.t('dashboard_kol.profile_tab.female') %></label>
            </div>
            <div class="col-md-2 cell">
              <input class="" type="radio" name="gender" value="0" id="gender_0" <%= checked('genders', 0, k) %> />
              <label class="radio-inline radio-btns label-profile"
                     for="gender_0"><%= polyglot.t('dashboard_kol.profile_tab.secrecy') %></label>
            </div>
          </div>
        </div>

        <!--兴趣爱好-->
        <div class="row">
          <div class="col-md-2 cell kol-profile">
            <%= polyglot.t('dashboard_kol.profile_tab.industry') %>
          </div>
          <div class="cell col-md-6">
            <input name="interests" id="kol_interests" value="Interests"  class="form-control required" required
                   data-placeholder="<%= polyglot.t('dashboard_kol.profile_tab.industry_placeholder') %>"/>
          </div>
        </div>
        <div class="row industry-row" style="">
          <div class="col-md-2 cell kol-profile"></div>
          <div class="col-md-6">
            <% _(industries).each(function(ind, i) { %>
            <div class="col-md-2 cell influence-circle">
              <button type="button" class="btn full-width" filter-btn name="industry_<%= i %>" data-toggle="button">
                <%= ind %>
              </button>
            </div>
            <% }); %>
          </div>
        </div>

        <% if (!k.mobile_number) { %>
          <div class="row set-mobile-number">
            <div class="set-mobile">
              <div class ="bind-mobile">
                绑定手机
              </div>
              <div class="row form-group mobile-number-verify">
                <div class="mobile-input">
                  <input class="form-control" data-fv-notempty="true" data-fv-notempty-message=<%= polyglot.t('dashboard_kol.validation.mobile') %> data-fv-regexp="true" data-fv-regexp-regexp="^1[34578][0-9]{9}$" data-fv-regexp-message=<%= polyglot.t('kols.mobile_format_error') %> type="mobile" id='mobile' name="mobile_number" value="" placeholder=<%= polyglot.t('dashboard_kol.profile_tab.mobile') %>  />          <!-- </div> -->
                </div>
                <div class="tips">
                  <p class=not_unique_number><%= polyglot.t("kols.mobile_number_already_token") %></p>
                  <p class=mobile_numer_is_blank><%= polyglot.t("kols.mobile_format_error") %></p>
                  <p class=send_sms_failed><%= polyglot.t("kols.send_sms_error") %></p>
                  <p class=send_sms_success><%= polyglot.t("kols.send_sms_success") %></p>
                </div>
              </div>

              <div class="verify-input">
                <input class="form-control verify-code" type="text", placeholder=<%= polyglot.t('kols.verify_code') %> />
              </div>
              <div class="verify-button">
                <button class="btn send_sms"><%= polyglot.t("kols.receive_verify_code") %></button>
              </div>
            </div>
          </div>
        <% } %>

      </div>
    </div>


    <% if (k.mobile_number) { %>
      <div class="row mobile-number toggle-box">
        <div style="overflow: auto">
          <div class="mobile-number-title col-md-8">
            <span>修改手机</span>
            <span class="toggle-button glyphicon glyphicon-plus"></span>
          </div>
        </div>
        <div class="score-tables set-mobile toggle-list" style="display: none">
          <div class="row form-group mobile-number-verify">
            <div class="mobile-input">
            <input class="form-control" data-fv-notempty="true" data-fv-notempty-message="<%= polyglot.t('dashboard_kol.validation.mobile') %>" data-fv-regexp="true" data-fv-regexp-regexp="^1[34578][0-9]{9}$" data-fv-regexp-message="<%= polyglot.t('kols.mobile_format_error') %>" type="mobile" id='mobile' name="mobile_number" value="" placeholder=<%= polyglot.t('dashboard_kol.profile_tab.mobile') %>  />
              <div class="tips">
                <p class=not_unique_number><%= polyglot.t("kols.mobile_number_already_token") %></p>
                <p class=mobile_numer_is_blank><%= polyglot.t("kols.mobile_format_error") %></p>
                <p class=send_sms_failed><%= polyglot.t("kols.send_sms_error") %></p>
                <p class=send_sms_success><%= polyglot.t("kols.send_sms_success") %></p>
              </div>
            </div>
          </div>
          <div class="row form-group">
            <div class="verify-input ">
              <input class="form-control verify-code" type="text", placeholder=<%= polyglot.t('kols.verify_code') %> />
            </div>
            <div class="verify-button">
              <button class="btn send_sms"><%= polyglot.t("kols.receive_verify_code") %></button>
            </div>
          </div>
        </div>
      </div>
    <% } %>

    <% if (Robin.currentKOL.attributes.provider === 'signup') { %>
      <div class="row password toggle-box">
    <% } else { %>
      <div class="row password toggle-box" style="display: none">
    <% } %>
        <div style="overflow: auto">
          <div class="password-title col-md-8">
            <span><%= polyglot.t('dashboard_kol.profile_tab.password') %></span>
            <span class="toggle-button glyphicon glyphicon-plus"></span>
          </div>
        </div>
        <div class="score-tables set-password toggle-list" style="display: none">
          <div class="row form-group">
            <div class="col-md-2 cell profile-labels kol-profile">
              <%= polyglot.t('dashboard_kol.profile_tab.current_password') %>:
            </div>
            <div class="col-md-6 cell">
              <input class="form-control" type="password" id='current_password' name="current_password" value=""/>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-2 cell profile-labels kol-profile">
              <%= polyglot.t('dashboard_kol.profile_tab.new_password') %>:
            </div>
            <div class="col-md-6 cell">
              <input class="form-control" type="password" id='password' name="_password" value="" minlength="8"
                     data-fv-stringlength-message="<%= polyglot.t("profile.password_must_be_8") %>"/>
            </div>
          </div>
          <div class="row form-group">
            <div class="col-md-2 cell profile-labels kol-profile">
              <%= polyglot.t('dashboard_kol.profile_tab.confirm_password') %>:
            </div>
            <div class="col-md-6 cell">
              <input class="form-control" type="password" id='password_confirmation' name="password_confirmation"
                     value=""/>
            </div>
          </div>
        </div>
      </div>
  </form>

  <!--社交-->
  <div class="social">
    <div class="campaigns-tables-title">
      <span><%= polyglot.t('dashboard_kol.profile_tab.social_title') %></span>
      <!--<span class="add-social glyphicon glyphicon-plus">&nbsp;&nbsp;-->
       <!-- <%= polyglot.t('dashboard_kol.profile_tab.add_social') %> -->
      </span>
    </div>
    <div class="row subtitle">
      <%= polyglot.t('dashboard_kol.profile_tab.social_subtitle') %>
    </div>
    <div class="score-tables social-content add-account">

    </div>
    <div class="score-tables social-content social-list">
    </div>
  </div>

  <div class="dashboard-kol-tab-footer clearfix">
    <button id="back_to_score_btn" class="btn btn-primary pull-right" type="submit"><i
          class="fa fa-chevron-right"></i><%= polyglot.t('common.save') %></button>
  </div>
</div>
