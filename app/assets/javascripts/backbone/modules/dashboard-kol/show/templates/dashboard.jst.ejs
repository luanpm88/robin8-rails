<div class="col-sm-12">
  <div class="dashboard-btns dashboard-kol">
    <div class="row">
      <h5><i class="fa fa-home"></i> Dashboard</h5>
      <div id="invites">
        <% if (items.length != 0) { %>
          <% _.each(items, function(item){ %>
            <div class="col-sm-12">
              <div class="col-xs-14 col-md-9">
                <%= formatDate(item.created_at) %> <%= item.campaign.description %>
                <div><b>Deadline: <%= formatDate(item.campaign.deadline) %></b></div>
              </div>
              <% if (item.status == "") { %>
                <div class="col-xs-4 col-md-3 pull-right">
                  <button type="button" class="btn btn-primary invitation-accept" data-invite-id="<%= item.id %>">Accept</button>
                  <button type="button" class="btn btn-danger invitation-decline" data-invite-id="<%= item.id %>">Decline</button>
                </div>
              <% } %>
            </div>
            <hr/>
          <% }); %>
          <div class="clearfix"></div>
        <% } else { %>
          <div class="col-sm-12">
            You are not invited to any campaigns yet. Perhaps <a href="#profile">editing</a> profile might help.
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<div class="clearfix"></div>
