<div class="weibo-tab">
<% if (items.length == 0) { %>
  <div class="row">Weibo report is empty!</div>
<% } else { %>
  <div class="weibo-search">
    <input type="text" name="authorname" placeholder="Author name">
    <input type="text" name="categories" placeholder="Categories">
    <input type="button" id="weiboReportSearch" class="btn btn-primary" value="Search">
    <div class="weibo-info">Showing <%= items.length %> entries</div>
  </div>
  <div>
    <table class="table table-striped tablesorter" id="weibo_table">
       <thead><tr>
        <th>Author first name</th>
        <th>Author last name</th>
        <th>Email</th>
        <th>Followers</th>
        <th>Landing page clicks</th>
        <th>Page views</th>
        <th>Shares</th>
        <th>KPI</th>
       </tr></thead>
       <tbody>
       <% _.each(items, function(c) { %>
          <tr data-id="<%= c.id %>">
            <td><%= c.author_first_name %></td>
            <td><%= c.author_last_name %></td>
            <td><%= c.email %></td>
            <td><%= c.followers %></td>
            <td><%= c.landing_page_clicks %></td>
            <td><%= c.page_views %></td>
            <td><%= c.shares %></td>
            <td><%= c.kpi %></td>
          </tr>
        <% }); %>

      </tbody>
    </table>
  </div>
<% } %>
</div>
