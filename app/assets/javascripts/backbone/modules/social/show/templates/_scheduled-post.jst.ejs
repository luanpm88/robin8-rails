<small><%- post.scheduled_date %></small>
<span class="editable" data-type="textarea" data-name="text"><%- post.text %></span>
<div class="pull-right" style="display: inline-block;">
  <span class="social-networks">
    <a href="#" class="btn btn-xs" data-toggle="tooltip" title="Post to @aylien"><i class="fa fa-twitter"></i></a>
    <a href="#" class="btn btn-xs" data-toggle="tooltip" title="Post to Aylien page"><i class="fa fa-facebook"></i></a>
    <a href="#" class="btn btn-xs" data-toggle="tooltip" title="Post to Aylien company page" disabled><i class="fa fa-linkedin"></i></a>
    <a href="#" class="btn btn-xs" data-toggle="tooltip" title="Post to Aylien page" disabled><i class="fa fa-google-plus"></i></a>
  </span>
  <a href="#" class="btn btn-xs btn-default" style="margin-left: 4px;" data-toggle="tooltip" title="Edit post"><i class="fa fa-pencil"></i></a>
  <a href="#" id="delete-post"  class="btn btn-xs btn-danger" data-toggle="tooltip" title="Delete post"><i class="fa fa-close"></i></a>
</div>
<div class="settings-row hidden">
  <div class="col-xs-4 shrink" style="width: 27%;">
    <div class="checkbox">
      <label>
        <input type="checkbox" id='shrink-links'> <strong>Shrink links</strong>
      </label>
    </div>
  </div>
  <div class="col-xs-4 social-networks" style="width: 40%;">
    <a href="#" class="btn <%= Robin.identities.twitter == undefined ? 'disabled' : '' %>" data-toggle="tooltip" title="Post to @<%= Robin.identities.twitter != undefined ? Robin.identities.twitter.name : '' %>"><i class="fa fa-twitter"></i></a>
    <input type='hidden' value='false' name="twitter" />
    <a href="#" class="btn <%= Robin.identities.facebook == undefined ? 'disabled' : '' %>" data-toggle="tooltip" title="Post to <%= Robin.identities.facebook != undefined ? Robin.identities.facebook.name : '' %> page"><i class="fa fa-facebook"></i></a>
    <input type='hidden' value='false' name="facebook" />
    <a href="#" class="btn <%= Robin.identities.linkedin == undefined ? 'disabled' : '' %>" data-toggle="tooltip" title="Post to <%= Robin.identities.linkedin != undefined ? Robin.identities.linkedin.name : '' %> page"><i class="fa fa-linkedin"></i></a>
    <input type='hidden' value='false' name="linkedin" />
    <a href="#" class="btn <%= Robin.identities.google == undefined ? 'disabled' : '' %>" data-toggle="tooltip" title="Post to <%= Robin.identities.google != undefined ? Robin.identities.google.name : '' %> page"><i class="fa fa-google-plus"></i></a>
    <input type='hidden' value='false' name="google" />
  </div>
  <div class="col-xs-4 schedule" style="width: 33%;">
    <!-- <a id='submitPost' class="btn btn-success pull-right btn-sm" style="margin-left: 6px;">Post</a> -->
    <a class="btn btn-default pull-right btn-sm schedule"><i class="fa fa-calendar"></i> Schedule</a>
    <div class="form-group pull-right" style="display: none;">
      <div class='input-group date' id='schedule-datetimepicker'>
        <input type='text' name='scheduled_date' class="form-control input-sm"/>
        <span class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </span>
      </div>
      <a class="btn btn-danger pull-right btn-sm cancel-schedule" style="margin-left: 6px;"><i class="fa fa-close"></i></a>
    </div>
  </div>
</div>