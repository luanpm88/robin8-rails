<div class="edit-settings-row hidden bottom-border-radius">
  <div class="col-xs-4 shrink" style="width: 22%; margin-top: 4px;">
    <div class="checkbox">
      <label style="white-space: nowrap;">
        <input type="checkbox" id='edit-shrink-links' name='shrinked_links'> <strong>Shrink links</strong> 
      </label>
    </div>
  </div>
  <div class="col-xs-4 edit-social-networks" style="width: 150px;">
    <a class="btn twitter <%= Robin.identities.twitter.length == 0 ? 'disabled' : '' %> <%= (post.twitter_ids.length > 0 &&  Robin.identities.twitter.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to twitter"><i class="fa fa-twitter"></i></a>
    <input type='hidden' name="twitter" />
    <a class="btn facebook <%= Robin.identities.facebook.length == 0 ? 'disabled' : '' %> <%= (post.facebook_ids.length > 0 && Robin.identities.facebook.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to facebook"><i class="fa fa-facebook"></i></a>
    <input type='hidden' name="facebook" />
    <a class="btn linkedin <%= Robin.identities.linkedin.length == 0 ? 'disabled' : '' %> <%= (post.linkedin_ids.length > 0 && Robin.identities.linkedin.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to linkedin"><i class="fa fa-linkedin"></i></a>
    <input type='hidden' name="linkedin" />
    <a class="btn weibo <%= Robin.identities.weibo.length == 0 ? 'disabled' : '' %> <%= (post.weibo_ids.length > 0 && Robin.identities.weibo.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to weibo"><i class="fa fa-weibo"></i></a>
    <input type='hidden' name="weibo" />
    <a class="btn wechat <%= Robin.identities.wechat.length == 0 ? 'disabled' : '' %> <%= (post.wechat_ids.length > 0 && Robin.identities.wechat.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to wechat"><i class="fa fa-wechat"></i></a>
    <input type='hidden' name="wechat" />
  </div>
  <div class="col-xs-4 schedule" style="width: 42%;">
    <div class="form-group pull-right">
      <div class='input-group date edit-datetimepicker'>
        <input type='text' name='scheduled_date' class="form-control input-sm"/>
        <span class="input-group-addon">
          <span class="fa fa-calendar"></span>
        </span>
      </div>
      <!-- <a class="btn btn-danger pull-right btn-sm cancel-schedule" style="margin-left: 6px;"><i class="fa fa-close"></i></a> -->
    </div>
  </div>
  <div class="col-xs-4 counter" style="width: 9%; margin-top: 4px;">
    <div style="width: 40px;">

      <span class="label label-success label-sm post-counter" id="edit-counter">140</span>
   </div>
  </div>
</div>
<div class="template-post-identities row hidden">
  <div id="twitter-identities" class="hidden" style="min-height: 55px;">
    <label class="col-lg-4 control-label">Twitter's account(s):</label>
    <div class="col-lg-8" >
      <select class="form-control select-identities" name="twitter_ids" multiple="multiple" size="2" >
        <% _.each(Robin.identities.twitter, function(item){ %>
          <option value="<%= item.id %>"> <%= item.name %> </option>
        <% }); %>
      </select>
    </div>
  </div>
  <div id="facebook-identities" class="hidden" style="min-height: 69px;">
    <label class="col-lg-4 control-label">Facebook's account(s):</label>
    <div class="col-lg-8" >
      <select class="form-control select-identities" name="facebook_ids" multiple="multiple" size="2" >
        <% _.each(Robin.identities.facebook, function(item){ %>
          <option value="<%= item.id %>"> <%= item.name %> </option>
        <% }); %>
      </select>
    </div>
  </div>
  <div id="linkedin-identities" class="hidden" style="min-height: 69px;">
    <label class="col-lg-4 control-label">Linkedin's account(s):</label>
    <div class="col-lg-8" >
      <select class="form-control select-identities" name="linkedin_ids" multiple="multiple" size="2" >
        <% _.each(Robin.identities.linkedin, function(item){ %>
          <option value="<%= item.id %>"> <%= item.name %> </option>
        <% }); %>
      </select>
    </div>
  </div>
  <div id="weibo-identities" class="hidden" style="min-height: 69px;">
    <label class="col-lg-4 control-label">Weibo's account(s):</label>
    <div class="col-lg-8" >
      <select class="form-control select-identities" name="weibo_ids" multiple="multiple" size="2" >
        <% _.each(Robin.identities.weibo, function(item){ %>
          <option value="<%= item.id %>"> <%= item.name %> </option>
        <% }); %>
      </select>
    </div>
  </div>
  <div id="wechat-identities" class="hidden" style="min-height: 69px;">
    <label class="col-lg-4 control-label">Wechat's account(s):</label>
    <div class="col-lg-8" >
      <select class="form-control select-identities" name="wechat_ids" multiple="multiple" size="2" >
        <% _.each(Robin.identities.wechat, function(item){ %>
          <option value="<%= item.id %>"> <%= item.name %> </option>
        <% }); %>
      </select>
    </div>
  </div>
</div>
<% var date = moment.utc(post.scheduled_date).toDate() %>
<%if (Math.abs(moment().diff(date, 'days')) >=1 ) { %>
  <small><%- moment(date).format('MM/DD/YYYY hh:mm A') %></small>
<% } else { %>
  <small><%- moment(date).format('hh:mm A') %></small>
<% } %>

<span class="editable" data-type="textarea" data-name="text"><%- post.text %></span>
<div class="pull-right" style="display: inline-block;">
  <span class="social-networks">
    <span class="btn btn-xs <%= Robin.identities.twitter.length == 0 ? 'disabled' : '' %> <%= (post.twitter_ids.length > 0 &&  Robin.identities.twitter.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to twitter"><i class="fa fa-twitter"></i></span>
    <span class="btn btn-xs <%= Robin.identities.facebook.length == 0 ? 'disabled' : '' %> <%= (post.facebook_ids.length > 0 && Robin.identities.facebook.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to facebook"><i class="fa fa-facebook"></i></span>
    <span class="btn btn-xs <%= Robin.identities.linkedin.length == 0 ? 'disabled' : '' %> <%= (post.linkedin_ids.length > 0 && Robin.identities.linkedin.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to linkedin %>"><i class="fa fa-linkedin"></i></span>
    <span class="btn btn-xs <%= Robin.identities.weibo.length == 0 ? 'disabled' : '' %> <%= (post.weibo_ids.length > 0 && Robin.identities.weibo.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to weibo %>"><i class="fa fa-weibo"></i></span>
    <span class="btn btn-xs <%= Robin.identities.wechat.length == 0 ? 'disabled' : '' %> <%= (post.wechat.length > 0 && Robin.identities.wechat.length != 0) ? 'btn-primary' : '' %>" data-toggle="tooltip" title="Post to wechat %>"><i class="fa fa-wechat"></i></span>
  </span>
  <a class="btn btn-xs btn-default edit-post" style="margin-left: 4px;" data-toggle="tooltip" title="Edit post"><i class="fa fa-pencil"></i></a>
  <a id="delete-post"  class="btn btn-xs btn-danger" data-toggle="tooltip" title="Delete post"><i class="fa fa-close"></i></a>
</div>