<h5><%= polyglot.t("social.profiles.title") %></h5>
<p><%= polyglot.t("social.profiles.description") %></p>
<p class='note'><%= polyglot.t("social.profiles.note") %></p>
<br>
<ul class="list-group">
  <ul class="list-group item <%= Robin.identities.twitter.length == 0 ? "no-padding-bottom" : ""%>">
    <span class="pull-right">
      <a class="btn btn-xs btn-social btn-twitter" name='twitter'>
        <i class="fa fa-twitter"></i>
        <%= polyglot.t("social.profiles.add_button") %>
      </a>
    </span>
    <span class='name'><%= polyglot.t("social.profiles.twitter") %></span>
    <% if (Robin.identities.twitter.length == 0) {%>
      <li class="identity">
        <span> <%=polyglot.t('social.profiles.no_accounts')%> </span>
      </li>
    <%} else {%>
      <% $.each(Robin.identities.twitter, function( index, value ) { %>
        <li class="identity">
          <a class='link' href="<%= value.url%>" target="_blank">@<%= value.name%></a>
          <a href="" class='disconnect' identityid='<%= value.id%>'><%= polyglot.t("social.profiles.disconnect") %></a></span>
        </li>
      <% }) %>
    <%} %>
  </ul>
  <ul class="list-group item <%= Robin.identities.facebook.length == 0 ? "no-padding-bottom" : ""%>">
