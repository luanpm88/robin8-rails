          <a class='link' href="<%= value.url%>" target="_blank"><%= value.name%></a>
          <a href="" class='disconnect' identityid='<%= value.id%>'><%= polyglot.t("social.profiles.disconnect") %></a></span>
        </li>
      <% }) %>
    <%} %>
  </ul>
  <ul class="list-group item <%= Robin.identities.google.length == 0 ? "no-padding-bottom" : ""%>">
