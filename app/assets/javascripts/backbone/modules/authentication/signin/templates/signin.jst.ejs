        <!--<button class="btn btn-wechat" id="wechat"><i class="fa btn-wechat"></i>-->
          <!--<span><%= polyglot.t("login.wechat_login") %></span></button>-->
          <!--</div>-->
          <!--</div>-->

      <!--<div class="row">-->
          <!--<div class="small-12 columns social-login">-->
          <!--<button class="btn btn-wechat" id="wechat_third"><i class="fa btn-wechat"></i>-->
          <!--<span><%= polyglot.t("login.wechat_third_login") %></span></button>-->
          <!--</div>-->
          <!--</div>-->

      <!--<div class="row">-->
