<div class="form-login"> 
  <div class="row">
    <div class="small-12 columns">
      <p class="loginintro" style="margin-bottom: 0px;"> Sign in to Robin</p>
      <p class="loginintro">Please enter your <strong>new Password</strong> and <strong>Password confirmation</strong> in order to proceed.</p>
      <form accept-charset="UTF-8" role="form" id="formReset" class="form-signup" autocomplete="off" onsubmit="return false;">
        <label class="panel-login">
          <div class="login_result"></div>
        </label>
        <div class="form-group">
          <input class="form-control" placeholder="Password" name='password' type="password" 
            minlength="8"
            data-fv-stringlength-message="The password must be at least 8 characters long"/>
        </div>
        <div class="form-group">
          <input class="form-control" placeholder="Password confirmation" name='password_confirmation'
            type="password" minlength="8" data-fv-stringlength-message="The password confirmation must be at least 8 characters long"/>
        </div>
        <br>
        <div id="alert-danger" class="alert alert-danger" role="alert" style="display: none; text-align: center;"></div>
        <div class="submit-wrap" style="margin-top: 0">
          <button id="login" class="button button-signup" type="submit"> Login </button>
        </div>
      </form>
    </div>
  </div>
</div>