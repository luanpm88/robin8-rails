<section id="featured1" class="signupFields">
  <div class="inwrap">
    <div class="container-fluid content">
      <div class="row content">
        <div class="col-xs-12">
          <div class="title text-center wow fadeInDown">
            <h1>Complete below</h1>
          </div>
          <div class="subtitle text-center wow fadeInUp">
          </div>
        </div>
      </div>
      <div class="row top">
        <div class="col-md-12">
          <div class="plan-box">
            <span class="your-plan">Your plan:</span>
                <span class="package">
                  Package Selected:
                  <span class="selected"><%=@package.slug%></span>
                </span>
            <span class="payment">Payments every <span class="selected"><%=@package.interval == 365 ? "Year" : "Month"%></span></span><br/>
                <span class="total-down">
                  Total charged: <span class="value"><%=@package.price%></span><br/>
                </span>
            <span class="next-date">Next Charge at <span class="date"><%=(Time.now.utc + @package.interval.days).strftime("%d-%m-%Y")%></span></span>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
      <%=flash[:success]%>
      <div class="row fields"></div>
      <%flash[:errors].each do |e|%>
          <p><%=e%></p>
      <%end if flash[:errors]%>

      <%= form_for @subscription, :html =>{:class=>"frmContact",:id=>"checkout-form"} do |f|  %>
          <div class="row">
            <div class="col-sm-offset-1 col-sm-10">
              <h3 class="title">Upgrade Now</h3>
              <div class="row">
                <input type="hidden" name="slug" value="<%=@package.slug%>" />
              </div>
            </div>
          </div>
          <div>
            <%= submit_tag "UPGRADE", :class=>"btn-lg" %>
          </div>
      <%end%>
    </div>
  </div>
</section>


<div class="clearfix"></div>
<script src="https://gateway.bluesnap.com/js/cse/v1.0.1/bluesnap.js"></script>
<script>BlueSnap.publicKey = "10001$";
BlueSnap.setTargetFormId("checkout-form");
</script>