<%= form_for([:crm_dashboard, @case], html: { class: "form-horizontal", multiple: true}) do |f| %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">手机号码</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :placeholder => '案例名称', :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
