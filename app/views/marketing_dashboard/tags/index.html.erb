<h1>Tag列表</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Tag ID</th>
      <th>label</th>
      <th>name</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |t| %>
      <tr>
        <td>
          <%= t.id  %>
        </td>
        <td><%= t.label %></td>
        <td><%= t.name %></td>
        <td>
          <%= link_to "+", marketing_dashboard_tag_add_circle_path(t.id), style: "float: right;" %>
          <%= render partial: "circle", collection: t.circles, locals: {tag_id: t.id} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @tags, renderer: BootstrapPagination::Rails  %>