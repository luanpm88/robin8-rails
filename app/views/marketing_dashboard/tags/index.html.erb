<h1>
  Tag列表
  <%= link_to "创建新的Tag", new_marketing_dashboard_tag_path, class: "btn btn-primary pull-right" %>
</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Tag ID</th>
      <th>label</th>
      <th>name</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |t| %>
      <tr>
        <td>
          <%= t.id  %>
        </td>
        <td><%= t.label %></td>
        <td><%= t.name %></td>
        <td>
          <%= link_to "+", marketing_dashboard_tag_add_circle_path(t.id), style: "float: right;" %>
          <% t.circles.each do |c|%>
            <%= c.name %><br/>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @tags, renderer: BootstrapPagination::Rails  %>