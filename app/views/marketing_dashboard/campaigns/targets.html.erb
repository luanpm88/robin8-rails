<h2><%= @title %></h2>


<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">新建过滤规则</h3>
        </div>
        <div class="panel-body">
          <%= form_for(CampaignTarget.new, as: :campaign_target, url: add_target_marketing_dashboard_campaign_path(:id => @campaign.id), method: :post) do |f| %>
            <div class="field form-group">
              <%= devise_error_messages! %>
            </div>
            <div class="field form-group">
              <%= f.label "过滤条件" %><br />
              <%= f.select :target_type_text, CampaignTarget::TargetTypes.values, class: "form-control" %>
            </div>
            
            <div class="field form-group">
              <%= f.label "过滤content" %><br />
              <%= f.text_field :target_content, autofocus: true, class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit "保存", class: "btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% attrs = %w(id name email mobile_number) %>
<table class='table table-bordered'>
  <thead>
    
    <tr>
      <% attrs.each do |attr| %>
        <th><%= attr.camelcase %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @kols.each do |k| %>
      <tr>
        <% attrs.each do |v| %>
          <td> <%= k.send v %> </td>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>

</table>

<%= will_paginate @kols %>