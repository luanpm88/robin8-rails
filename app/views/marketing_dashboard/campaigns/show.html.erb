<table class="table table-striped">

  <%= link_to 'CampaignInvites', marketing_dashboard_campaign_campaign_invites_path(@campaign.id), :class => 'btn btn-primary' %> &nbsp;
  <%= link_to 'CampaignShows', marketing_dashboard_campaign_campaign_shows_path(@campaign.id), :class => 'btn btn-primary' %>

  <% %w(id user_id user.email name description start_time deadline budget take_budget per_action_budget per_budget_type img_url url avail_click total_click status actual_deadline_time).each do |v| %>
    <tr>
      <td> <%= v.classify %> </td>
      <% if v.end_with?("url") %>
        <td> <%= link_to multi_send(@campaign, v),  multi_send(@campaign, v), :target => "blank"%> </td>
      <% else %>
        <td> <%= multi_send @campaign, v %> </td>
      <% end %>
    </tr>
  <% end %>

  <% if @campaign.is_cpa_type? %>
  <tr>
    <td>Antion Urls</td>
    <td>
      <% @campaign.campaign_action_urls.each do |action| %>
        <%= link_to action.action_url %> <br />
      <% end %>
    </td>
  </tr>
  <% end %>
</table>
