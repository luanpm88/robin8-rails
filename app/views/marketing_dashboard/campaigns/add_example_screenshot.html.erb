<head>
<style type="text/css">　　
.row {
  margin-top:15px;
}</style>　　
</head>
<div class="container-fluid" style="padding: 100px 50px;">
  <% if @campaign.example_screenshot_required? %>
    <h1>请上传截图示例，并且添加备注</h1>
  <% else %>
    <h1>请添加具体要求</h1>
  <% end %>
  <div class="container">
    <div class="row">
      <form action="save_example_screenshot_and_remark" method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="form-group video_container">
          <label for="file-upload" class="col-sm-2 control-label">上传图片标签</label>
          <% count = @campaign.example_screenshot_count || 1 %>
          <% count.times do |t| %> 
          <div class="col-sm-8">
            <input type="file" name="image[]"  >
            <input type="text" name="comment[]" >
          </div>
          <% end %>
        </div>
         <legend>介绍</legend>
          <textarea placeholder="添加活动介绍" rows="20" name="remark" id="remark_text" cols="40" class="ui-autocomplete-input" autocomplete="off" role="textbox" aria-autocomplete="list" aria-haspopup="true"></textarea>
          <button>提交</button>
        </fieldset>
      </form>
    </div>
  </div>
</div>
