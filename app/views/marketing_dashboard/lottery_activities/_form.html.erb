<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>活动编号</label>
      <%= f.object.code %>
    </div>

    <div class="form-group">
      <label>所需票数</label>
      <%= f.object.total_number %> (不可更改)
    </div>

    <div class="form-group">
      <label>活动名称</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>活动描述</label>
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <hr />
    <%= f.submit '确认提交', :class => 'btn btn-primary btn-lg' %>
  </div>
</div></div>