
<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>活动名称</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>活动描述</label>
      <%= f.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>所需人数</label>
      <%= f.number_field :total_number, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>轮播图片</label>
      <% f.object.pictures.each do |picture| %>
        <div>
          <%= image_tag picture.name.url, style: "max-width: 300px;" %>
        </div>
        <%= link_to marketing_dashboard_lottery_activity_path(f.object, picture_id: picture.id), method: :put do %>
          移除此图
        <% end %>
      <% end unless f.object.pictures.blank? %>
      <%= f.file_field :pictures, multiple: true, :class => "form-control" %>
    </div>

    <div class="form-group">
      <label>奖品介绍图片</label>
      <% f.object.lottery_activity_pictures.each do |picture| %>
        <div>
          <%= image_tag picture.name.url, style: "max-width: 300px;" %>
        </div>
        <%= link_to marketing_dashboard_lottery_activity_path(f.object, lottery_activity_picture_id: picture.id), method: :put do %>
          移除此图
        <% end %>
      <% end unless f.object.lottery_activity_pictures.blank? %>
      <%= f.file_field :lottery_activity_pictures, multiple: true, :class => "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <hr />
    <%= f.submit '确认提交', :class => 'btn btn-primary btn-lg' %>
  </div>
</div></div>