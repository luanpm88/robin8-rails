<%= form_for([:marketing_dashboard, @lottery_activity], url: marketing_dashboard_lottery_activities_path, html: { class: "form-horizontal", multiple: true}) do |f| %>

  <div class="form-group">
    <label class="col-sm-2 control-label">活动名称</label>
    <div class="col-sm-10">
      <%= f.text_field :name, :placeholder => '名称', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">活动描述</label>
    <div class="col-sm-10">
      <%= f.text_area :description, :placeholder => '活动描述', :class => "form-control", cols: 20, rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">所需总人数</label>
    <div class="col-sm-10">
      <%= f.number_field :total_number, :placeholder => '所需总人数', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Banner图片</label>
    <div class="col-sm-10">
      <%= f.file_field :lucky_number,multiple: true, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
    </div>
  </div>
<% end %>
