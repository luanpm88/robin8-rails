<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>kol_id</label>
      <%= f.object.kol_id %>(<%= f.object.kol.name %>)
    </div>
    


    <div class="form-group">
      <label>平台来源</label>
      <%= f.select :provider, ["weibo", "public_wechat", "meipai", "miaopai"],class: "form-control" %>
    </div>

    <div class="form-group">
      <label>标题</label>
      <%= f.text_field :title, class: "form-control" %>
    </div> 
    <div class="form-group">
      <label>封面</label>
      <%= f.text_field :cover_url, class: "form-control" %>
    </div> 

    <div class="form-group">
      <label>描述</label>
      <%= f.text_area :desc, class: "form-control" %>
    </div> 

    <div class="form-group">
      <label>链接</label>
      <%= f.text_field :link, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>喜欢数</label>
      <%= f.text_field :like_count, class: "form-control" %>
    </div> 

    <div class="form-group">
      <label>阅读数</label>
      <%= f.text_field :read_count, class: "form-control" %>
    </div> 

    <div class="form-group">
      <label>转发数</label>
      <%= f.text_field :repost_count, class: "form-control" %>
    </div> 

    <div class="form-group">
      <label>评论数</label>
      <%= f.text_field :comment_count, class: "form-control" %>
    </div> 
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr />
      <%= f.submit '确认提交', :class => 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>