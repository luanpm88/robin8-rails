<%= form_for([:marketing_dashboard, @announcement], html: { class: "form-horizontal", multiple: true}) do |f| %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">位置</label>
    <div class="col-sm-10">
      <%= f.number_field :position, :placeholder => '越小越优先', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">标题</label>
    <div class="col-sm-10">
      <%= f.text_field :title, :placeholder => '必填', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">文章地址</label>
    <div class="col-sm-10">
      <%= f.text_field :url, :placeholder => '必填', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">描述</label>
    <div class="col-sm-10">
      <%= f.text_field :desc, :placeholder => '必填', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Banner图片</label>
    <div class="col-sm-10">
      <%= f.file_field :banner, :class => "form-control" %>
      <% if @announcement.banner_url.present? %>
        <%= image_tag @announcement.banner_url, width: 100, height: 100 %>
      <% end %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
