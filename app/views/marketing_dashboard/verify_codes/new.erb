<div class="container-fluid">
  <h2>
    获取短信验证码
  </h2>
  <label>手机号码</label>
  <input class="mobile-input" placeholder="填写手机号码"></input>
  <button class="btn btn-primary">获取</button>
  <p class="verify_code"></p>
</div>

<script>
  $(".btn").click(function(){
    if ($('.mobile-input').val()){
      $.ajax(
      {
        method: "post",
        url: "/marketing_dashboard/verify_codes/get_verify_code",
        data: {mobile_number: $('.mobile-input').val()}
      }).done(function(data){
        if(data["code"]){
          $('.verify_code').text('验证码为: ' + data["code"])
        }else{
          alert('获取失败，请刷新重试')
        }
      })
    }
  })
</script>
