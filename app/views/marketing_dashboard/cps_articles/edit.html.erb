<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-1">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">文章编辑</h3>
        </div>
        <div class="panel-body">
          <%= form_for(@cps_article, as: :cps_article, url: marketing_dashboard_cps_article_path(@cps_article), method: :put) do |f| %>
            <div class="field form-group">
              <%= f.label "标题" %><br />
              <%= f.text_field :title, autofocus: true, class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label "内容" %><br />
              <%= f.text_area :content, autofocus: true, :style => "width: 100%;height:300px", class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "保存", class: "btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
