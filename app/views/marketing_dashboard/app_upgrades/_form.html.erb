<%= form_for([:marketing_dashboard, @app_upgrade], html: { class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">平台</label>
    <div class="col-sm-10">
      <%= f.select :app_platform, options_for_select([['IOS', 'IOS'],['Android','Android']]), :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">版本号(格式:x.x.x)</label>
    <div class="col-sm-10">
      <%= f.text_field :app_version, :placeholder => '', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">发布说明</label>
    <div class="col-sm-10">
      <%= f.text_area :release_note, :placeholder => '发布说明', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">下载地址</label>
    <div class="col-sm-10">
      <%= f.text_field :download_url, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">是否强制升级</label>
    <div class="col-sm-10">
      <%= f.select :force_upgrade, options_for_select([['是', 1],['否', 0]]), :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
