<%= form_for([:marketing_dashboard, @kol_announcement], html: { class: "form-horizontal", multiple: true}) do |f| %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">类型</label>
    <div class="col-sm-10">
      <%= f.select :category, options_for_select([['kol展示', 'kol'],['Link展示','link']]), :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">位置</label>
    <div class="col-sm-10">
      <%= f.number_field :position, :placeholder => '越小越优先，可为空', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">标题</label>
    <div class="col-sm-10">
      <%= f.text_field :title, :placeholder => '选填', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">封面</label>
    <div class="col-sm-10">
      <%= f.file_field :cover, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">链接</label>
    <div class="col-sm-10">
      <%= f.text_field :link, :placeholder => '类型为Link展示时必填', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">Kol Id</label>
    <div class="col-sm-10">
      <%= f.text_field :kol_id, :placeholder => '类型为Kol展示时必填', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
