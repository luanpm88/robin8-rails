          <p class="form-control-static"><%= @r8_infos[:campaign][:created_count] %></p>
        </div>
        <label class="col-sm-2 control-label">Total Budget</label>
        <div class="col-sm-2">
          <p class="form-control-static"><%= @r8_infos[:campaign][:total_budget] %></p>
        </div>
        <label class="col-sm-2 control-label">Total Revenue</label>
        <div class="col-sm-2">
          <p class="form-control-static"><%= @r8_infos[:campaign][:total_revenue] %></p>
        </div>
      </div>
      <div class="form-group">
        <label class="col-sm-2 control-label">Top 3 KOLS</label>
        <div class="col-sm-10">
          <table class="table table-striped">
            <tbody>
              <tr>
                <% 3.times do %>
                  <td>
                    <div class="media">
                      <div class="media-left">
                        <a href="#">
                          <img class="media-object" src="..." alt="...">
                        </a>
                      </div>
                      <div class="media-body">
                        <h4 class="media-heading">Media heading</h4>
                        ...
                      </div>
                    </div>
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

