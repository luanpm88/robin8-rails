<%= form_for(current_admin_user, url: marketing_dashboard_update_password_path, html: { class: "form-horizontal", multiple: true}) do |f| %>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">修改密码</label>
    <div class="col-sm-10">
      <%= f.password_field :password, :placeholder => '请输入密码(大于6位)', :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
