<h3>反馈管理</h3>

<table class='table table-bordered table-striped'>
  <thead>
    <tr>
      <th>ID</th>
      <th>App版本</th>
      <th>平台</th>
      <th>OS版本</th>
      <th>设备类型</th>
      <th>内容</th>
      <th>截图</th>
      <th>状态</th>
    </tr>
  </thead>
  <tbody>
    <% @feedbacks.each do |f| %>
      <tr>
        <% %w(id app_version app_platform os_version device_model content).each do |v| %>
          <td> <%= f.send v %> </td>
        <% end %>
        <td class="text-center">
          <%= link_to f.screenshot.url, target: "_blank" do %>
            <%= image_tag f.screenshot.url(200), class: "img-thumbnail" %>
          <% end %>
        </td>
        <td id="feedback_<%= f.id %>">
          <%= link_to 'KOL详情', "/marketing_dashboard/kols/#{f.kol_id}" %></br>
          <% if f.status == 'pending' %>
              <%= link_to '设为已处理', processed_marketing_dashboard_feedback_path(f), :remote => true %>
          <% else %>
            已处理
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @feedbacks, renderer: BootstrapPagination::Rails  %>
