<div class="row">
  <div class="col-md-8 col-md-offset-1">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">新建榜单</h3>
      </div>
      <div class="panel-body">
        <%= form_for(@hot_item, as: :hot_item, url: marketing_dashboard_hot_items_path(@hot_item), method: :post) do |f| %>
          <div class="field form-group">
            <%= devise_error_messages! %>
          </div>
          <div class="field form-group">
            <%= f.label "标题" %><br />
            <%= f.text_field :title, autofocus: true, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label "链接" %><br />
            <%= f.text_field :origin_url, autofocus: false, class: "form-control" %>
          </div>

          <div class="field form-group">
            <%= f.label "发布日期" %><br />
            <div class="input-group date">
              <%= f.text_field :publish_at, autofocus: false, class: "form-control" %>
              <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
              </span>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "保存", class: "btn btn-lg btn-success btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
