<h3>近一个月活动发布日统计</h3>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>日期</th>
    <th>发布活动数量</th>
    <th>发布活动金额</th>
  </tr>
  </thead>
  <tbody>
  <% @campaign_releases.each do | record |  %>
    <tr>
      <td><%= record.date %></td>
      <td><%= record.count %></td>
      <td><%= record.budget %></td>
    </tr>
  <% end %>
  </tbody>
</table>
