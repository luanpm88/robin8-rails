<div class="container-fluid">
  <h2>
    获取短信验证码
  </h2>
  <hr />
  <div class="label label-success verify_code"></div>
  <div class="row" style="margin-top: 10px;">
    <div class="col-md-6">
      <div class="form-group">
        <label>手机号码</label>
        <input class="mobile-input form-control" placeholder="填写手机号码">
      </div>
      <button class="btn btn-primary">获取</button>
    </div>
  </div>
</div>

<script>
  var url = "<%= marketing_dashboard_utilities_verify_code_path %>"
  $(".btn").click(function(){
    if ($('.mobile-input').val()){
      $.ajax(
      {
        method: "post",
        url: url,
        data: {mobile_number: $('.mobile-input').val()}
      }).done(function(data){
        if(data["code"]){
          $('.verify_code').text('验证码为: ' + data["code"])
        }else{
          alert('获取失败，请刷新重试')
        }
      })
    }
  })
</script>
