<h3><%= @title %></h3>

<div class="container-fluid">
  <div class="row">
    <div class=col-md-6>
      <%= form_for(@helper_doc, as: :helper_tag, url: @url) do |f| %>
        <div class="field form-group">
        </div>
        <!--
        <div class="field form-group">
          <%#= f.label "问题分类" %><br />
          <%#= f.select :doc_tag, HelperTag.all.map(&:title), autofocus: true, class: "form-control" %>
        </div>
        -->
        <div class="field form-group">
          <%= f.label "问题" %><br />
          <%= f.text_field :question, autofocus: true, class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label "答案" %><br />
          <%= f.text_area :answer, autofocus: true, style: "height: 180px", class: "form-control" %>
        </div>
        <div class="field form-group">
          <%= f.label "排序权重" %><br />
          <%= f.text_field :sort_weight, autofocus: true, class: "form-control" %>
        </div>
        <div class="actions">
          <%= f.submit "保存", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
