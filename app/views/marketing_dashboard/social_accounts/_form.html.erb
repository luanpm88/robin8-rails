<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>kol_id</label>
      <%= f.object.kol_id %>(<%= f.object.kol.name %>)
    </div>
    


    <div class="form-group">
      <label>平台来源</label>
      <%= f.select :provider, ["weibo", "public_wechat", "meipai", "miaopai"],class: "form-control" %>
    </div>

    <div class="form-group">
      <label>用户名</label>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>主页</label>
      <%= f.text_field :homepage, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>头像地址</label>
      <%= f.text_field :avatar_url, class: "form-control" %>
    </div>

     <div class="form-group">
      <label>个人简介</label>
      <%= f.text_area :brief, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label>喜欢数</label>
      <%= f.text_field :like_count, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>关注数</label>
      <%= f.text_field :followers_count, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>好友数</label>
      <%= f.text_field :friends_count, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>转发数</label>
      <%= f.text_field :reposts_count, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>文章数</label>
      <%= f.text_field :statuses_count, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>是否认证(0: 未认证, 1: 认证)</label>
      <%= f.select :verified, [0, 1], class: "form-control" %>
    </div>

    <div class="form-group">
      <label>province</label>
      <%= f.text_field :province, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>city</label>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>性别(0: 未设置, 1: 男, 2: 女)</label>
      <%= f.select :gender, [0, 1, 2],  class: "form-control" %>
    </div>

    <div class="form-group">
      <label>价格</label>
      <%= f.text_field :price, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>第二条价格</label>
      <%= f.text_field :second_price, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>转发价格</label>
      <%= f.text_field :repost_price, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr />
      <%= f.submit '确认提交', :class => 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>