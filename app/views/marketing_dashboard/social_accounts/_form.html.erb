<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <label>KOL ID：</label>
      <%= f.object.kol_id %>
    </div>
    <div class="form-group">
      <label>KOL名称：</label>
      <%= f.object.kol.name %>
    </div>

    <div class="form-group">
      <label>平台来源</label>
      <%= f.select :provider, SocialAccount::Providers.to_a.map(&:reverse), {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label>UID</label>
      <%= f.text_field :uid,class: "form-control", :placeholder => "微博帐号 或者 微信帐号的 id" %>
    </div>

    <div class="form-group">
      <label>用户名</label>
      <%= f.text_field :username, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>主页</label>
      <%= f.text_field :homepage, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>头像地址</label>
      <%= f.text_field :avatar_url, class: "form-control" %>
    </div>

     <div class="form-group">
      <label>个人简介</label>
      <%= f.text_area :brief, class: "form-control" %>
    </div>
    
    <div class="form-group">
      <label>喜欢数</label>
      <%= f.text_field :like_count, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>粉丝数</label>
      <%= f.text_field :followers_count, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>关注数</label>
      <%= f.text_field :friends_count, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>转发数</label>
      <%= f.text_field :reposts_count, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>文章数</label>
      <%= f.text_field :statuses_count, class: "form-control" %>
    </div>
    <div class="form-group">
      <label>是否认证(0: 未认证, 1: 认证)</label>
      <%= f.select :verified, [0, 1], {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label>省</label>
      <%= f.select :province, Province.all.map(&:name), {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label>城市 (由于 城市关联查询有点麻烦， city 暂时需要手动输入 <%= link_to "城市列表",  cities_marketing_dashboard_social_accounts_path, :target => "_blank" %>)</label>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>性别</label>
      <%= f.select :gender, [["未设置", 0], ["男", 1], ["女", 2]],  {}, { class: "form-control" } %>
    </div>

    <div class="form-group">
      <label>价格</label>
      <%= f.text_field :price, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>第二条价格</label>
      <%= f.text_field :second_price, class: "form-control" %>
    </div>

    <div class="form-group">
      <label>转发价格</label>
      <%= f.text_field :repost_price, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <hr />
      <%= f.submit '确认提交', :class => 'btn btn-primary btn-lg' %>
    </div>
  </div>
</div>