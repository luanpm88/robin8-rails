<h1>
  Circel列表
  <%= link_to "创建新的圈子", new_marketing_dashboard_circle_path, class: "btn btn-primary pull-right" %>
</h1>

<table class='table table-bordered'>
  <thead>
    <tr>
      <th>Circle ID</th>
      <th>label</th>
      <th>name</th>
      <th>操作</th>
    </tr>
  </thead>

  <tbody>
    <% @circles.each do |c| %>
      <tr>
        <td>
          <%= c.id  %>
        </td>
        <td><%= c.label %></td>
        <td><%= c.name %></td>
        <td>
          <%= link_to "+", marketing_dashboard_circle_add_tag_path(c.id), style: "float: right;" %>
          <% c.tags.each do |t|%>
            <%= t.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @circles, renderer: BootstrapPagination::Rails  %>