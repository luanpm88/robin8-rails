<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-2">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">修改查看kol上限</h3>
        </div>
        <div class="panel-body">
          <%= form_for(@user, url: marketing_dashboard_user_path(@user), method: :put) do |f| %>
            <div class="field form-group">
              <%= f.label "查看kol上限" %><br />
              <%= f.number_field :show_count, autofocus: true, class: "form-control" %>
            </div>

            <div class="actions">
              <%= f.submit "保存", class: "btn btn-lg btn-success btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
