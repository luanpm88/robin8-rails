<%
  # 文档标题
  cols = [
    'Name',
    'Mobile number',
    'Available amount',
    'Historical payout',
    'Historical recharge',
    'Last campaign time',
    'Saleman'
  ]
%>
<%=
  CSV.generate do |csv|
    csv << cols
    @users.each do |user|
      csv << [
        user.smart_name,
        user.mobile_number,
        user.avail_amount,
        user.historical_payout,
        user.historical_recharge,
        (user.campaigns.maximum("created_at").strftime("%Y-%m-%d %H:%M") rescue nil),
        user.seller.try(:name)
      ]
    end
  end.encode('utf-8', :invalid => :replace, :undef => :replace, :replace => "?")
-%>