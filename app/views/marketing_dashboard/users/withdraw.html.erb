<h3>品牌主提现</h3>
<hr />

<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <%= form_tag marketing_dashboard_user_withdraw_path, class: "form" do %>
        <div class="form-group">
          <label>品牌主当前余额</label>
          <%= text_field_tag :credits, @user.avail_amount, class: "form-control", :disabled => 'disabled' %>
        </div>
        <div class="form-group">
          <label>提现金额</label>
          <%= text_field_tag :credits, nil, required: true, class: "form-control", :placeholder => "输入提现金额" %>
        </div>
        <div class="form-group">
          <label>操作人员名称</label>
          <%= text_field_tag :operator, nil, required: true, class: "form-control", :placeholder => "输入操作人员名称", html: {} %>
        </div>
        <div class="form-group">
          <label>备注</label>
          <%= text_field_tag :remark, nil, class: "form-control", :placeholder => "输入备注" %>
        </div>

        <%= submit_tag '确认人工提现', :class => 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
