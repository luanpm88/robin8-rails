<% if @invite_code.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @invite_code.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_for @invite_code ,  url: {action: @action} , html: { class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">邀请码(格式: 6位数字)</label>
    <div class="col-sm-10">
      <%= f.number_field :code , autofocus: true , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">邀请码类型</label>
    <div class="col-sm-10">
      <%= f.select :invite_type ,InviteCode::InviteType.values , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-2 control-label">标签名/社团名</label>
    <div class="col-sm-10">
      <%= f.text_field :invite_value , autofocus: true , :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '提交', :class => 'btn btn-primary' %>
    </div>
  </div>

<% end %>
