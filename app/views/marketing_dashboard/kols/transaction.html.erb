<h3>资金流水</h3>
kol id: <%= @kol.id %></br>
kol name: <%= @kol.name %></br>
kol mobile_number: <%= @kol.mobile_number %>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Date</th>
    <th>Direct</th>
    <th>Subject</th>
    <th>Credits</th>
    <th>Avail Amount</th>
    <th>Amount</th>
    <th>Frozen Amount</th>
  </tr>
  </thead>
  <tbody>
  <% @transactions.each do |w| %>
    <tr>
      <td> <%= w.created_at.to_s(:date_time) %> </td>
      <% %w( direct get_subject credits avail_amount amount frozen_amount).each do |v| %>
        <td> <%= multi_send w, v %> </td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<%= will_paginate @transactions %>
