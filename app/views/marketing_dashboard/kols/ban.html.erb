<h3>拉黑KOL</h3>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= form_for(@kol, as: :kol, url: marketing_dashboard_kol_path(@kol), method: :put) do |f| %>
        <div class="field form-group">
          <%= devise_error_messages! %>
        </div>
        <div class="field form-group">
          <%= f.label "手机号" %>
          <div><%= f.object.mobile_number %></div>
        </div>
        <div class="field form-group">
          <%= f.label "名字" %>
          <div><%= f.object.name %></div>
        </div>

        <div class="field form-group datetime" style="position: relative;">
          <%= f.label "拉黑截止日期" %>
          <%= f.text_field :forbid_campaign_time, autofocus: true, class: "form-control datetimepicker",  id: "datetimepicker1" %>
        </div>
        <div class="field form-group" style="position: relative;">
          <%= f.label "Kol等级" %>
          <ul>
            <li>S 级别有效点击上限5000</li>
            <li>A 级别有效点击上限100</li>
            <li>B 级别有效点击上限50</li>
            <li>C 级别有效点击上限10</li>
            <li>黑名单 有效点击上限0</li>
          </ul>
          <%= f.select :kol_level, ["A", "B", "C", "S"], {}, { class: "form-control" } %>
        </div>
        <div class="actions">
          <%= f.submit "确定", class: "btn btn-warning btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
$(function () {
  $('.datetimepicker').datetimepicker(
    {format: 'YYYY-MM-DD HH:MM'}
  );
});
</script>
