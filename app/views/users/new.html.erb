<div class="signup">
  <header class="int-header">
    <%= render :partial => "pages/partials/menu"%>
    <%= render :partial => "pages/partials/page_banner", :locals => { :header => (flash[:info] || I18n.t('register.title') )}%>
  </header>

  <div class="form-step step-one">
    <div class="row">
      <div class="small-12 columns">
        <div class="errorwarning">
          <%flash[:errors].each do |e|%>
              <p><%=e%></p>
          <%end if flash[:errors].present?%>
        </div>

        <%= form_for @user,:url=>"/users/new" do |f|  %>
            <label>
              <%=f.email_field :email,:placeholder=>I18n.t('register.email_placeholder'),"data-validation"=>"required",
                               "data-validation-error-msg"=> I18n.t('register.messages.email_blank'),"data-validation"=>"email"%>
              <!--<input type="email"  name="email" placeholder="Email" required />-->
            </label>
            <label>
              <%=f.text_field :first_name,:placeholder=>I18n.t('register.first_name_placeholder'),"data-validation"=>"required",
                              "data-validation-error-msg"=> I18n.t('register.messages.first_name_blank')%>
              <!--<input type="text"  name="first_name" placeholder="First Name" required />-->
            </label>
            <label>
              <!--<input type="text"  name="last_name" placeholder="Last Name" required />-->
              <%=f.text_field :last_name,:placeholder=>I18n.t('register.last_name_placeholder'),"data-validation"=>"required",
                              "data-validation-error-msg"=> I18n.t('register.messages.last_name_blank')%>
            </label>
            <label>
              <!--<input type="password"  name="password" placeholder="Password" required />-->
              <%=f.password_field :password,:placeholder=>I18n.t('register.password_placeholder'),"data-validation"=>"length", "data-validation-length"=>"min8",
                                  "data-validation-error-msg"=> I18n.t('register.messages.pass_invalid')%>
            </label>
            <p class="agree"><%= I18n.t('register.agree')%> <a href="/terms"><%= I18n.t('register.terms')%></a>.
            <% if request.location && request.location.country.to_s == "China" %>
              <p class="kols"><%= I18n.t('register.kol_signup')%> <a href="/kols/new"><%= I18n.t('register.here')%></a>
            <% else %>
              <p class="kols"><%= I18n.t('register.inf_signup')%> <a href="/kols/new"><%= I18n.t('register.here')%></a>
            <% end %>

            <div class="errorwarning">
              <p>Please fill out all required fields</p>
            </div>
            <div class="submit-wrap">
              <%= f.submit "Sign Up", :class=>"button button-signup" %>
              <!--<input type="submit" value="Sign Up" class="button button-signup">-->
            </div>
        <%end%>
        <!--</form>-->
      </div>
    </div>
    <%= render :partial => "shared/social_sign_up" %>
</div>


  <script src="//cdnjs.cloudflare.com/ajax/libs/jquery-form-validator/2.1.47/jquery.form-validator.min.js"></script>


  <script> $.validate(); </script>


  <style>
      .form-error{
          font-size: 15px;
          color: #FF0000;
      }

      .custom-padding {
          margin-bottom: 10px;
      }


  </style>
