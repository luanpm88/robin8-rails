<div class="card mb-12">
  <div class="card-header">
      <h4><i class="fa fa-line-chart" aria-hidden="true"></i> 过去7天冠军</h4>
  </div>
  <div class="card-body">
    <div class="well profile_view">
      <div class="col-sm-12">
        <div class="left col-xs-7">
            <h4 id="kol_winner_name">No Person</h4>
            <h3 class="text-success">
                <i class="fa fa-jpy" aria-hidden="true"></i> <span id="cur_winner_price">0</span>
            </h3>
            <br />
        </div>
        <div class="right col-xs-5 text-center">
            <%= image_tag("partners/user.png", alt: "", id: "avatar_url7", class: "img-circle img-responsive") %>
            <br />
        </div>
      </div>
      <div class="col-xs-12 bottom text-center">
        <div class="col-xs-12 col-sm-12 emphasis">
            <div class="card-footer small text-muted" >最后更新 <span id="lastupdate1"></span></div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {
    var imgSrc1 = $("#avatar_url7").attr('src');
    var chartJson = 
    $.ajax({url: "/partners/dashboard/chart1.json"})
    .done(function(chartJson){
      $("#cur_winner_price").text(chartJson.record.day_of_income);
      $("#kol_winner_name").text(chartJson.kol.name);
      $("#avatar_url7").attr('src', chartJson.avatar_url).on("error", function(){
        this.src = imgSrc1;
      });
      $('#lastupdate1').text(moment().subtract(1, 'days').hour(1).minute(59).format("LLL"));
    });
    
  });
</script>