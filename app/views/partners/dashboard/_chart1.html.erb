<div class="card mb-12">
  <div class="card-header">
  </div>
  <div class="card-body">
    <div class="well profile_view card-shadow">
      <div class="col-sm-12">
        <div class=" col-xs-12 text-center">
          <%= image_tag("partners/user.png", alt: "", id: "avatar_url7", class: "img-circle img-responsive profile-img-max") %>
          <br />
        </div>
        <div class=" col-xs-12 text-center">
            <h4 id="kol_winner_name">
              <%= t('partner.dashboard.error.msg') %>
            </h4>
            <div class="btn btn-champions color1">
              <%= t('partner.dashboard.chart1.champion') %>
            </div>
            <br />
            <br />
            <br />
        </div>
      </div>
      <div class="col-sm-12 card-bottom text-center">
        <div class="col-xs-12 col-sm-12 ">
            <div class="card-footer small " >
                <h3 class="">
                    <i class="fa fa-jpy" aria-hidden="true"></i> <span id="cur_winner_price">0</span>
                </h3>
                <h4 class="text-muted">
                  <%= t('partner.dashboard.chart1.title') %>
                </h4>
                
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function () {

    var imgSrc1 = $("#avatar_url7").attr('src');
    var chartJson = 
    $.ajax({url: "/partners/dashboard/chart1.json"})
    .done(function(chartJson){
      $("#cur_winner_price").text(chartJson.record.day_of_income.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,'));
      $("#kol_winner_name").text(chartJson.kol);
      $("#avatar_url7").attr('src', chartJson.avatar_url).on("error", function(){
        this.src = imgSrc1;
      });
      $('#lastupdate1').text(moment().subtract(1, 'days').hour(1).minute(59).format("LLL"));
    })
    .fail(function(){
      console.log('error in ')
    });
    
  });
</script>