<div class="card mb-12">
  <div class="text-center card-header">
    
  </div>
  <div class="card-body">
      <div class="well profile_view card-shadow">
          <div class="row">
              <span class="col-sm-8">
                <i class="fa fa-line-chart"></i> <%= t('partner.dashboard.chart7.title') %>
              </span>
              <span class="col-sm-4">
                  <select class="form-control" style="">
                      <option>1</option>
                  </select>
              </span>
          </div>
        
        <div class="col-sm-12">
          <canvas class="hide" id="chart7" width="100" height="100"></canvas>
          <div class="no-data-found" id="not-found7">
            <div>
              <i class="fa fa-exclamation-circle" aria-hidden="true"></i> <%= t('partner.dashboard.error.msg') %>
            </div>
        </div>
        </div>
        <br />
        
    </div>
    
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function () {

    var chartJson = $.ajax({url: "/partners/dashboard/chart7.json", async: true})
    .done(function() {
      
      var array = JSON.parse(chartJson.responseText);

      var chartlabels = array.labels;
      
      var chartData = array.data;
      if(chartData.length < 1){
        dataIsFound(false, 7);
        return;
      }
      var ctx = document.getElementById("chart7");
      
      var myLineChart = new Chart(ctx, {
        type: 'horizontalBar',
        data: {
          labels: chartlabels, 
          datasets: [{
            label: "Tags Distribution",
            backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: "rgba(2,117,216,1)",
            data: chartData, 
          }],
        },
        options: {
          scales: {
            xAxes: [{
              time: {
                unit: 'dollar'
              },
              gridLines: {
                display: false
              }
            }],
            yAxes: [{
              gridLines: {
                display: false
              }
            }],
          },
          legend: {
            display: false
          }
        }
      });
      dataIsFound(true, 7);
    })
    .fail(function(){
      dataIsFound(false, 7);
    });

  });

</script>
