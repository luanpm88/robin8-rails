<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="panel" style="margin-top: 30px;">
        <div class="panel-heading">
          <h2>合作伙伴数据后台</h2>
        </div>
        <div class="panel-body">
          <%= form_tag '/partners/login', class: "form" do %>
            <div class="form-group">
              <%= label_tag "用户名" %><br />
              <%= text_field_tag :name, params[:name], class: "form-control" %>
            </div>
            
            <div class="form-group">
              <%= label_tag "密码" %><br />
              <%= password_field_tag :password, params[:password], class: "form-control" %>
            </div>

            <div class="form-group text-danger"><%= flash[:notice] %></div>

            <div class="actions">
              <%= submit_tag "登录", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
