<div class="signup pricing">
  <header class="int-header">
    <%= render :partial => "pages/partials/menu"%>
    <%= render :partial => "pages/partials/page_banner", :locals => { :header => I18n.t('addons.title') }%>
  </header>

  <div class="form-step step3">
    <form action="/subscribe/<%=params[:plan] || 'add-on'%>" method="POST" data-abide>
      <input type="hidden" name="slug" value="<%=params[:plan]%>"/>
      <div class="row">
        <div class="small-12 columns">
          <div class="goback">
            <a href="/pricing"><%= I18n.t 'addons.go_back'%></a>
          </div>

          <p class="selection-intro-heading"><%= I18n.t 'addons.title'%> </p>
          <% if current_user.active_subscription.present? %>
            <p class="selection-guarantee"><%= I18n.t 'addons.money_back'%></p>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <table cellpadding="0" cellspacing="0">
            <tr>
              <th class="qty"><%= I18n.t 'addons.table.qty'%></th>
              <th><%= I18n.t 'addons.table.addon'%></th>
              <th class="price"><%= I18n.t 'addons.table.price'%></th>
            </tr>
            <%@add_ons.each_with_index do |a,index|%>
              <% next if HIDDEN_ADDONS.include? a.slug %>
                <tr>
                  <td class="qty">
                    <input type="text" size="2" value="0" name="add_ons[<%=a.id%>]" id="qty-<%=index+1%>" />
                    <div class="updown">
                      <a class="qty-plus" data-qty="qty-<%=index+1%>">+</a>
                      <a class="qty-minus" data-qty="qty-<%=index+1%>">-</a>
                    </div>
                  </td>
                  <td class="addon">
                    <%=a.name%>
                  </td>
                  <td class="price">
                    $<%=a.price%>
                  </td>
                </tr>
            <%end%>
          </table>
        </div>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token%>
      </div>
      <div class="row">
        <div class="small-12 columns">
          <div class="submit-wrap">
            <input type="submit" value="<%= I18n.t 'addons.continue'%>" class="button button-signup nextstep">
          </div>
        </div>
      </div>
    </form>
  </div>

</div>

