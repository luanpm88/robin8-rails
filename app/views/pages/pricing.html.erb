
<div class="signup pricing">
  <header class="int-header">
    <%= render :partial => "pages/partials/menu"%>
    <%= render :partial => "pages/partials/page_banner", :locals => { :header => "Select Pricing Plan"}%>

  </header>
  <div class="form-step">
    <form action="#" id="step2">
      <div class="row">
        <div class="small-12 columns">
          <div class="tab-nav">
            <p class="selection-intro business-plans">Empower your business with Robin8.  <br />Take the guesswork out of social and content marketing and get better results.</p>
          </div>

          <p class="selection-intro-heading">Subscription Plans</p>
        </div>
      </div>
      <div class="row business-plans" id="business-plans" data-equalizer>
        <div class="small-12 medium-6 large-4 columns">
          <div class="subscription-type" id="plantype-basic" data-plan="basic" data-equalizer-watch>
            <h2><%= @products[0].name.split(' ')[0] %></h2>
            <div class="price-bubble">
              <div class="price-amount">
                $<%=(@products[0].price).to_i %><span class="permonth">/mo</span>
              </div>
            </div>
            <div class="plan-inclusions">
              <ul>
                <li><strong>5</strong> <span>SmartContent</span></li>
                <li><strong>1</strong> <span>Content Gallery</span></li>
                <li><strong>1</strong> <span>Seat</span></li>
                <li><strong>1</strong> <span>Personal Influencers List</span></li>
                <li><strong>3</strong> <span>Streams for Media Monitoring</span></li>
                <li><strong>&nbsp;</strong> <span></span></li>
              </ul>
            </div>
            <div class="selector-wrap">
              <a data-selected="basic" <%if user_signed_in? && current_user.active_subscription.present? &&  BASIC_SLUGS.include?(current_user.active_subscription.product.slug)%> class="button button-planselector" data-select-text='Current' onclick="setPackage('<%=@products[0].slug%>');" onclick="setPackage('<%=@products[0].slug%>');" <%else%> data-select-text='Select' class="button button-planselector" onclick="setPackage('<%=@products[0].slug%>');" <%end%> data-selected-text='Selected' ><%=(user_signed_in? && current_user.active_subscription.present? &&  BASIC_SLUGS.include?(current_user.active_subscription.product.slug) )? "Current" : "Select"%></a>
            </div>
          </div>
        </div><!--end plan type column -->
        <div class="small-12 medium-6 large-4 columns">
          <div class="subscription-type" id="plantype-business" data-plan="business" data-equalizer-watch>
            <h2><%= @products[1].name.split(' ')[0] %></h2>
            <div class="price-bubble">
              <div class="price-amount">
                $<%=(@products[1].price).to_i %><span class="permonth">/mo</span>
              </div>
            </div>
            <div class="plan-inclusions">
              <ul>
                <li><strong>10</strong> <span>SmartContent</span></li>
                <li><strong>5</strong> <span>Content Galleries</span></li>
                <li><strong>5</strong> <span>Seats</span></li>
                <li><strong>5</strong> <span>Personal Influencers List</span></li>
                <li><strong>10</strong> <span>Streams for Media Monitoring</span></li>
                <li><strong>&nbsp;</strong> <span></span></li>
              </ul>
            </div>
            <div class="selector-wrap">
              <a data-selected="business" <%if user_signed_in? && current_user.active_subscription.present? &&  BUSINESS_SLUGS.include?(current_user.active_subscription.product.slug)%>class="button button-planselector" onclick="setPackage('<%=@products[1].slug%>');" data-select-text='Current' <%else%> data-select-text='Select' class="button button-planselector" onclick="setPackage('<%=@products[1].slug%>');" <%end%> data-selected-text='Selected' ><%=(user_signed_in? && current_user.active_subscription.present? &&  BUSINESS_SLUGS.include?(current_user.active_subscription.product.slug) )? "Current" : "Select"%></a>
            </div>
          </div>
        </div><!--end plan type column -->
        <div class="small-12 medium-6 large-4 columns">
          <div class="subscription-type" id="plantype-enterprise" data-plan="enterprise" data-equalizer-watch >
            <h2><%= @products[2].name.split(' ')[0] %></h2>
            <div class="price-bubble">
              <div class="price-amount">
                $<%=(@products[2].price).to_i %><span class="permonth">/mo</span>
              </div>
            </div>
            <div class="plan-inclusions">
              <ul>
                <li><strong>200</strong> <span>SmartContent</span></li>
                <li><strong>75</strong> <span>Content Galleries</span></li>
                <li><strong>75</strong> <span>Seats</span></li>
                <li><b>Unlimited</b> <span>Personal Influencers List</span></li>
                <li><b>Unlimited</b> <span>Streams for Media Monitoring</span></li>
                <li><b>20</b> <span> Hours of Customization</span></li>
              </ul>
            </div>
            <div class="selector-wrap">
              <a data-plan="enterprise" <%if user_signed_in? && current_user.active_subscription.present? &&  ENTERPRISE_SLUGS.include?(current_user.active_subscription.product.slug)%>class="button button-planselector" onclick="setPackage('<%=@products[2].slug%>');" data-select-text='Current' <%else%> data-select-text='Select' class="button button-planselector" onclick="setPackage('<%=@products[2].slug%>');" <%end%> data-selected-text='Selected' ><%=(user_signed_in? && current_user.active_subscription.present? &&  ENTERPRISE_SLUGS.include?(current_user.active_subscription.product.slug) )? "Current" : "Select"%></a>
            </div>
          </div>
        </div><!--end plan type column -->
      </div><!-- end #business-plans -->

      <div class="row">
        <div class="small-12 columns">
          <div class="submit-wrap">
            <input type="button" onclick="checkout();" value="Continue" class="button button-signup nextstep" id="planselect-button">
          </div>
        </div>
      </div>
      <input type="text" name="plan_selection" id="plan-selection" style="display:none;" val="" />
    </form>
  </div>


  <div class="signup-footer">
    <div class="row">
      <div class="small-12 columns">
        <h3>Service Details</h3>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-6 columns">
        <div class="service-item">
