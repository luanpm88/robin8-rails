
<div class="contact">
  <header class="int-header">
    <%= render :partial => "pages/partials/menu"%>
    <%= render :partial => "pages/partials/page_banner", :locals => { :header => @l.t('contact_page.title')}%>
  </header>

  <div class="int-content">
    <div class="row">
      <% if flash[:from].present? %>
        <h3 style="text-align: center;"><%= flash[:from] %></h3><br>
      <% end %>
    </div>

    <div class="row ">
      <!-- CONTENT -->

      <div style="border-right: 1px solid #c1c1c1; padding-right: 15px;" class="small-4 columns address-info">
        <h3><%= @l.t('contact_page.address_title') %></h3>

        <address class="contact-addresses">
          <%= @l.t('contact_page.address').html_safe %>
        </address>

        <%= @l.t('contact_page.inquires_title') %>:
        <a href="mailto:info@robin8.com"><br>info@robin8.com</a><br><br>


      </div>
      <!-- SIDEBAR -->
      <div class="small-8 columns contact-form">
        <% if flash[:success].present? %>
          <div class="alert-success">
            <%=flash[:success]%>
          </div>
        <% end %>

        <form  action="/contact"  method="POST"  data-abide>
          <div class="row">
            <div class="columns small-12">
              <div class="row">
                <div class="columns small-6 form-group">
                  <label>
                    <input type="text" placeholder="<%=@l.t('contact_page.form.first_name_placeholder')%>" class="form-control col-sm-12" required="" name="user[first_name]"></label>
                </div>
                <div class="columns small-6  form-group">
                  <label>
                    <input type="text" placeholder="<%=@l.t('contact_page.form.last_name_placeholder')%>" class="form-control col-sm-12" required="" name="user[last_name]"></label>
                </div>
              </div>
              <div class="row">
                <div class="columns small-12 form-group">
                  <label>
                    <input type="email" placeholder="<%=@l.t('contact_page.form.email_placeholder')%>" class="form-control col-sm-12" required="" name="user[email]"></label>
                </div>
              </div>
              <div class="row">
                <div class="form-group columns small-12">
                  <label>
                    <select class="form-control columns small-12" id="subject" name="user[subject]" required>
                      <option selected="" value=""><%= @l.t('contact_page.form.subject_select_placeholder') %>:</option>
                      <option value="suggestions"><%= @l.t('contact_page.form.suggestions') %></option>
                      <option value="product"><%= @l.t('contact_page.form.product_support') %></option>
                    </select>
                  </label>
                </div>
              </div>
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
              <div class="row">
                <div class="columns small-12 form-group">
                  <label>
                    <textarea rows="8" class="form-control" id="message"  name="user[message]" required placeholder="<%= @l.t('contact_page.form.message_placeholder') %>"></textarea>
                  </label>
                </div>
              </div>
              <div class="errorwarning">
                <p><%= @l.t('contact_page.form.fill_out') %></p>
              </div>
              <div class="submit-wrap">
                <button class="button button-signup" type="submit"><%= @l.t('contact_page.form.send_button') %></button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
