
<div class="contact">
  <header class="int-header">
    <%= render :partial => "pages/partials/menu"%>
    <%= render :partial => "pages/partials/page_banner", :locals => { :header => I18n.t('contact_page.title')}%>
  </header>

  <div class="int-content">
    <div class="row ">
      <!-- CONTENT -->

      <div style="border-right: 1px solid #c1c1c1; padding-right: 15px;" class="small-4 columns address-info">
        <h3><%= I18n.t('contact_page.address_title') %></h3>

        <address class="contact-addresses">
          <%= I18n.t('contact_page.address').html_safe %>
        </address>

        <div class="contact-addresses">

          <%= I18n.t('contact_page.inquires_title') %>:
          <a href="mailto:info@myprgenie.com"><br>info@robin8.com</a><br><br>

          <%= I18n.t('contact_page.phone_title') %>:
          <a href="#"><br><%= I18n.t('contact_page.phone') %></a><br><br>

        </div>

      </div>
      <!-- SIDEBAR -->
      <div class="small-8 columns contact-form">
        <%=flash[:success]%>
        <form  action="/contact"  method="POST"  data-abide>
          <div class="row">
            <div class="columns small-12">
              <div class="row">
                <div class="columns small-6 form-group">
                  <label>
                    <input type="text" placeholder="First Name" class="form-control col-sm-12" required="" name="user[first_name]"></label>
                </div>
                <div class="columns small-6  form-group">
                  <label>
                    <input type="text" placeholder="Last Name" class="form-control col-sm-12" required="" name="user[last_name]"></label>
                </div>
              </div>
              <div class="row">
                <div class="columns small-12 form-group">
                  <label>
                    <input type="email" placeholder="Email Address" class="form-control col-sm-12" required="" name="user[email]"></label>
                </div>
              </div>
              <div class="row">
                <div class="form-group columns small-12">
                  <label>
                    <select class="form-control columns small-12" id="subject" name="user[subject]" required>
                      <option selected="" value=""><%= I18n.t('contact_page.form.subject_select_placeholder') %>:</option>
                      <option value="service"><%= I18n.t('contact_page.form.subject_select_placeholder') %></option>
                      <option value="suggestions"><%= I18n.t('contact_page.form.suggestions') %></option>
                      <option value="product"><%= I18n.t('contact_page.form.product_support') %></option>
                    </select></label>
                </div>
              </div>
              <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
              <div class="row">
                <div class="columns small-12 form-group">
                  <label>
                    <textarea rows="8" class="form-control" id="message"  name="user[message]" required placeholder="<%= I18n.t('contact_page.form.message_placeholder') %>"></textarea></label>
                </div>
              </div>
              <div class="errorwarning">
                <p><%= I18n.t('contact_page.form.fill_out') %></p>
              </div>
              <div class="submit-wrap">
                <button class="button button-signup" type="submit"><%= I18n.t('contact_page.form.send') %></button>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
