<%= render :partial => "pages/partials/header" %>

<div class="branding-pg">
  <div class="hero-section hero-sm hero-bg">
    <div class="container">
      <div class="hero-cont">
        <h1>基于大数据的KOL广告平台</h1>
      </div>
    </div>
  </div>

  <div class="section section-plain">
    <div class="container">
      <div class="hero-cont">
