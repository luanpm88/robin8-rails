<div class="nav fixed">
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li><a class="logo" href="/"><%= @l.t('header.title') %></a></li>
      <li class="toggle-topbar menu-icon">
        <a href="#"><span><%= @l.t('header.menu') %></span></a>
      </li>
    </ul>
    <section class="top-bar-section">
      <!-- Right Nav Section -->
      <ul class="right">
        <% if china_instance? %>
          <li><a href="<%= Rails.application.secrets.instance[:us_domain] %>">
            <%= image_tag asset_path('us-flag-icon.png'), height: 13 %>
          </a></li>
        <% else %>
          <li><a href="<%= Rails.application.secrets.instance[:china_domain] %>">
            <%= image_tag asset_path('china-flag-icon.png'), height: 13 %>
          </a></li>
        <% end %>

        <% if china_locale? %>
          <li><%= link_to 'EN', root_path(locale: :en) %></li>
        <% else %>
          <li><%= link_to 'ZH', root_path(locale: :zh) %></li>
        <% end %>

        <% if current_page?(home_path) %>
          <li><a href='http://try.robin8.com/robin/' target='_blank'><%= @l.t('header.contact_us') %></a></li>
        <% else %>
          <li><a href="/home" class="advertisers_link"><%= @l.t('header.advertisers') %></a></li>
        <% end %>

        <% if user_signed_in? %>
          <% if current_user.first_name.blank? || current_user.last_name.blank? %>
            <li><a href='/'><%= current_user.name.humanize %></a></li>
          <% else %>
            <li><a href='/'><%= current_user.first_name.humanize + " " + current_user.last_name.humanize %></a></li>
          <% end %>
          <li><%= link_to @l.t('header.logout'), destroy_user_session_path, :method => :delete %></li>
        <% else %>
          <li><a href='/signin'><%= @l.t('header.log_in') %></a></li>
        <% end %>
      </ul>

    </section>
  </nav>
</div>
