<div class="page full-page overflow-hidden pmes-reg-page hide" id="pmes_reg_page">
  <div class="content-panel">
    <div class="content-body default-form size-b white-bg">
      <%= hidden_field_tag 'current_token', @current_token %>
      <label class="form-group">
        <div class="form-input">
          <input type="email" class="form-control" id="email" placeholder="邮箱地址" disabled="disabled" />
        </div>
      </label>
      <label class="form-group">
        <div class="form-input">
          <input type="tel" class="form-control" id="phone" placeholder="手机号码" disabled="disabled" />
        </div>
      </label>
      <label class="form-group">
        <div class="form-input">
          <input type="text" class="form-control" id="device_id" placeholder="Device ID" disabled="disabled" />
        </div>
      </label>
      <label class="form-group">
        <div class="form-input">
          <input type="password" class="form-control" id="password" placeholder="请输入密码" />
        </div>
      </label>
      <label class="form-group">
        <div class="form-input">
          <input type="password" class="form-control" id="password_confirm" placeholder="请重复密码" />
        </div>
      </label>
    </div>
  </div>

  <div class="btn-group mt30">
    <div class="item pl15 pr15">
      <button type="button" class="button btn-cyan btn-lg btn-block btn-pmes-reg-submit" id="pmes_reg_submit_btn">确定</button>
    </div>
  </div>
</div>

<div class="page full-page overflow-hidden pmes-reg-page" id="pmes_detail_page">
  <div class="default-card put-balance-card"></div>

  <div class="default-card put-trend-card"></div>
</div>
