
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta name="viewport" content="width=device-width" />
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <title>Robin8</title>
  <%= stylesheet_link_tag  'mail-template' %>
</head>

<body>
<table class="body-wrap">
  <tr>
    <td></td>
    <td class="container" width="600">
      <div class="content">
        <table class="main" width="100%" cellpadding="0" cellspacing="0">
          <tr>
            <td class="content-wrap">
              <table width="100%" cellpadding="0" cellspacing="0">
                <tr>
                  <td class="content-block">
                    Hello Robin8 support,
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    <b>Newswire release with distributing options:</b>
                    <ul>
                      <% if @myprgenie %>
                        <li>From <%= @myprgenie_published_at %> - MyPRGenie Web Distribution</li>
                      <% end %>
                      <% if @accesswire %>
                        <li>From <%= @accesswire_published_at %> - Accesswire</li>
                      <% end %>
                      <% if @prnewswire %> 
                        <li>From <%= @prnewswire_published_at %> - PR Newswire</li>
                      <% end %>
                    </ul>
                    <b>Release URL:</b> <br>
                    <%= @publicLink %>
                  </td>
                </tr>
                <tr>
                  <td class="content-block">
                    <table class="invoice">
                      <tr>
                        <td>
                          <b>Title:</b> <br>
                          <%= @title %>
                        </td>
                      </tr>
                      <tr>
                        <td>
                          <b>Text:</b> <br>
                          <% 
                            if @text.length > 250 
                              @text = @text.mb_chars[0, 1000] + "...<br><a href='" + @publicLink + "'>Read more...</a>" 
                            end 
                          %>
                          <%= @text.html_safe %>
                        </td>
                      </tr>
                    </table>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        </table>
        <div class="footer">
          <table width="100%">
            <tr>
              <td class="aligncenter content-block">Robin8 Inc. 1745 Broadyway, 17th Floot, New York 10019</td>
            </tr>
            <tr>
              <td class="aligncenter content-block">Questions? Email <a href="mailto:">support@robin8.com</a></td>
            </tr>
          </table>
        </div>
      </div>
    </td>
    <td></td>
  </tr>
</table>

</body>
</html>




